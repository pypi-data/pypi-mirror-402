<?xml version="1.0" encoding="UTF-8" ?>
<templates xml:space="preserve">

    <t
        t-name="mail_notification_link.MessagingMenu"
        t-inherit="mail.MessagingMenu.content"
        t-inherit-mode="extension"
    >
        <xpath expr="//t[@name='threads']//NotificationItem" position="attributes">
            <attribute
                name="resModel"
            >thread.model !== 'discuss.channel' and thread.model !== 'mail.box' ? thread.model : undefined</attribute>
            <attribute
                name="resId"
            >thread.model !== 'discuss.channel' and thread.model !== 'mail.box' ? thread.id : undefined</attribute>
        </xpath>
    </t>

</templates>
