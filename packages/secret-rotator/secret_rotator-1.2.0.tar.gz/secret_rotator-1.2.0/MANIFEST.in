# Include documentation and license
include README.md
include LICENSE.md
include CHANGELOG.md

# Include example configuration
include config/config.example.yaml

# Include requirements
include requirements.txt

# Exclude development, internal, and test files
exclude .gitignore
exclude .github/*
recursive-exclude tests *
recursive-exclude .github *
recursive-exclude internal *

# Exclude generated and temporary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude *.log
global-exclude .DS_Store

# Exclude config files that contain secrets
exclude config/config.yaml
exclude config/.master.key
recursive-exclude config *.key
recursive-exclude data *
recursive-exclude logs *
