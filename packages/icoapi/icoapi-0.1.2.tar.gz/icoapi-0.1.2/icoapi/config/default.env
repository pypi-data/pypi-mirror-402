# ICOapi Environment Variables
# Note that the <VITE_API_> prefix is required only for the vite frontend client, but to keep consistency between
# the frontend client and backend API the names are kept the same

# REST API Settings
VITE_API_PROTOCOL=http
VITE_API_HOSTNAME="localhost"
VITE_API_PORT=33215
VITE_API_VERSION=v1
VITE_API_ORIGINS=http://localhost,http://localhost:5173,http://localhost:33215,http://127.0.0.1:5173

# WebSocket Settings
VITE_API_WS_PROTOCOL=ws
VITE_API_WS_PREFIX=ws
# This controls how many times per second the WebSocket attempts to stream data
WEBSOCKET_UPDATE_RATE=300

# Logging
LOG_LEVEL=DEBUG
LOG_USE_JSON=0
LOG_USE_COLOR=1
LOG_MAX_BYTES=1048576
LOG_BACKUP_COUNT=9
LOG_NAME_WITHOUT_EXTENSION=icodaq
LOG_LEVEL_UVICORN=INFO