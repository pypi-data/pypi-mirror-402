<odoo>

  <record model="ir.module.category" id="module_category_odoo_repository">
      <field name="name">Odoo Repository</field>
      <field name="sequence">50</field>
  </record>

  <record id="group_odoo_repository_user" model="res.groups">
    <field name="name">Odoo Repository User</field>
    <field name="category_id" ref="module_category_odoo_repository" />
  </record>

  <record id="group_odoo_repository_manager" model="res.groups">
    <field name="name">Odoo Repository Manager</field>
    <field name="category_id" ref="module_category_odoo_repository" />
    <field
            name="implied_ids"
            eval="[(4, ref('odoo_repository.group_odoo_repository_user'))]"
        />
  </record>

</odoo>
