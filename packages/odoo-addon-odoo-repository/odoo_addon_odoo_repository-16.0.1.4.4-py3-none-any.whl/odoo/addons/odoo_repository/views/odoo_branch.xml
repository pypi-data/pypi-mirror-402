<odoo>

  <record id="odoo_branch_view_form" model="ir.ui.view">
    <field name="name">odoo.branch.form</field>
    <field name="model">odoo.branch</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button
                        name="action_scan"
                        type="object"
                        string="Scan"
                        class="btn-primary"
                        groups="odoo_repository.group_odoo_repository_manager"
                    />
          <button
                        name="action_force_scan"
                        type="object"
                        string="Force Scan"
                        class="btn-secondary"
                        confirm="This operation will restart the scan from the beginning. Are you sure?"
                        groups="odoo_repository.group_odoo_repository_manager"
                    />
        </header>
        <sheet>
          <group>
            <field
                            name="name"
                            attrs="{'readonly': [('repository_branch_ids', '!=', [])]}"
                        />
          </group>
          <group name="repositories" string="Repositories">
            <field name="repository_branch_ids" nolabel="1" colspan="2">
              <tree>
                <field name="repository_id" />
                <field name="module_ids" />
                <field name="last_scanned_commit" />
              </tree>
            </field>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="odoo_branch_view_tree" model="ir.ui.view">
    <field name="name">odoo.branch.tree</field>
    <field name="model">odoo.branch</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
      </tree>
    </field>
  </record>

  <record id="odoo_branch_view_search" model="ir.ui.view">
    <field name="name">odoo.branch.search</field>
    <field name="model">odoo.branch</field>
    <field name="type">search</field>
    <field name="arch" type="xml">
      <search>
        <field name="name" />
        <filter name="archived" string="Archived" domain="[('active', '=', False)]" />
      </search>
    </field>
  </record>

  <record id="odoo_branch_action" model="ir.actions.act_window">
    <field name="name">Versions</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">odoo.branch</field>
    <field name="view_id" ref="odoo_branch_view_tree" />
  </record>

  <menuitem
        id="odoo_branch_menu"
        parent="config_odoo_repository_menu"
        action="odoo_branch_action"
    />

</odoo>
