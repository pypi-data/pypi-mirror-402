<odoo>

  <record id="odoo_module_view_form" model="ir.ui.view">
    <field name="name">odoo.module.form</field>
    <field name="model">odoo.module</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <div
                        class="alert alert-info"
                        role="alert"
                        attrs="{'invisible': [('blacklisted', '=', False)]}"
                    >
              <p class="my-0">
                  <span
                            >You can only create blacklisted module names. The scanner is responsible to create technical module names automatically, but will ignore blacklisted modules.</span>
              </p>
          </div>
          <group>
            <field name="name" />
            <field name="blacklisted" force_save="1" />
          </group>
          <group
                        name="branch_modules"
                        string="Exist on repositories/branches:"
                        attrs="{'invisible': [('blacklisted', '=', True)]}"
                    >
            <field name="module_branch_ids" nolabel="1" colspan="2">
              <tree>
                <field name="repository_branch_id" />
                <field name="version" />
                <field name="author_ids" widget="many2many_tags" />
                <field name="license_id" />
                <field name="sloc_python" />
                <field name="sloc_xml" />
                <field name="sloc_js" />
                <field name="sloc_css" />
              </tree>
            </field>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="odoo_module_view_tree" model="ir.ui.view">
    <field name="name">odoo.module.tree</field>
    <field name="model">odoo.module</field>
    <field name="arch" type="xml">
      <tree>
        <field name="name" />
        <field name="blacklisted" />
      </tree>
    </field>
  </record>

  <record id="odoo_module_view_search" model="ir.ui.view">
    <field name="name">odoo.module.search</field>
    <field name="model">odoo.module</field>
    <field name="type">search</field>
    <field name="arch" type="xml">
      <search>
        <field name="name" />
        <filter
                    name="blacklisted"
                    string="Blacklisted"
                    domain="[('blacklisted', '=', True)]"
                />
      </search>
    </field>
  </record>

  <record id="odoo_module_action" model="ir.actions.act_window">
    <field name="name">Technical Module Names</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">odoo.module</field>
    <field name="view_id" ref="odoo_module_view_tree" />
    <field name="context">{"default_blacklisted": 1}</field>
  </record>

  <menuitem
        id="odoo_module_menu"
        parent="misc_odoo_repository_menu"
        action="odoo_module_action"
    />

</odoo>
