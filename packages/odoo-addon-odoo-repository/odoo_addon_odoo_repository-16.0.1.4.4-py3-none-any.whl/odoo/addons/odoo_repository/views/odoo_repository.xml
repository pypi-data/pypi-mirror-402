<odoo>

  <record id="odoo_repository_view_form" model="ir.ui.view">
    <field name="name">odoo.repository.form</field>
    <field name="model">odoo.repository</field>
    <field name="arch" type="xml">
      <form>
        <header>
          <button
                        name="action_scan"
                        type="object"
                        string="Scan"
                        class="btn-primary"
                        groups="odoo_repository.group_odoo_repository_manager"
                        attrs="{'invisible': [('to_scan', '=', False)]}"
                    />
          <button
                        name="action_force_scan"
                        type="object"
                        string="Force Scan"
                        class="btn-secondary"
                        confirm="This operation will restart the scan from the beginning. Are you sure?"
                        groups="odoo_repository.group_odoo_repository_manager"
                        attrs="{'invisible': [('to_scan', '=', False)]}"
                    />
        </header>
        <sheet>
          <div class="oe_button_box" name="button_box">
              <field name="module_ids" invisible="1" />
              <button
                            name="open_modules"
                            type="object"
                            class="oe_stat_button"
                            icon="fa-sitemap icon"
                            attrs="{'invisible': [('module_ids', '=', [])]}"
                        >
                <span>Modules</span>
              </button>
          </div>
          <group>
            <group name="repository" string="Repository">
              <group colspan="2">
                <field name="org_id" attrs="{'readonly': [('module_ids', '!=', [])]}" />
                <field name="name" attrs="{'readonly': [('module_ids', '!=', [])]}" />
                <field name="repo_url" widget="url" />
                <field name="to_scan" />
                <field name="sequence" />
              </group>
              <group attrs="{'invisible': [('to_scan', '=', False)]}" colspan="2">
                <field name="clone_url" />
                <field
                                    name="repo_type"
                                    attrs="{'required': [('to_scan', '=', True)]}"
                                />
                <field
                                    name="token_id"
                                    options="{'no_open': True}"
                                    groups="odoo_repository.group_odoo_repository_manager"
                                    attrs="{'invisible': [('ssh_key_id', '!=', False)]}"
                                />
                <field
                                    name="ssh_key_id"
                                    options="{'no_open': True}"
                                    groups="odoo_repository.group_odoo_repository_manager"
                                    attrs="{'invisible': [('token_id', '!=', False)]}"
                                />
              </group>
            </group>
            <group
                            name="options"
                            string="Options"
                            attrs="{'invisible': [('to_scan', '=', False)]}"
                        >
              <field name="scan_weekday_ids" widget="many2many_tags" />
              <field
                                name="manual_branches"
                                attrs="{'readonly': [('module_ids', '!=', [])]}"
                            />
              <field name="specific" />
              <field name="clone_name" groups="base.group_no_one" />
            </group>
          </group>
          <group>
            <group
                            name="addons_path"
                            string="Addons Path"
                            attrs="{'invisible': [('to_scan', '=', False)]}"
                        >
              <field name="addons_path_ids" nolabel="1" colspan="2">
                <tree editable="bottom">
                  <field name="relative_path" readonly="1" />
                  <field name="is_standard" readonly="1" />
                  <field name="is_enterprise" readonly="1" />
                  <field name="is_community" readonly="1" />
                </tree>
              </field>
            </group>
            <group name="branches" string="Branches">
            <field
                                name="branch_ids"
                                nolabel="1"
                                colspan="2"
                                attrs="{'readonly': [('manual_branches', '=', False)]}"
                            >
                <tree editable="bottom">
                  <field
                                        name="branch_id"
                                        attrs="{'readonly': [('parent.manual_branches', '=', False)]}"
                                    />
                  <field
                                        name="cloned_branch"
                                        attrs="{'column_invisible': [('parent.manual_branches', '=', False)]}"
                                    />
                  <field name="module_ids" />
                  <field name="last_scanned_commit" />
                </tree>
              </field>
            </group>
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="odoo_repository_view_tree" model="ir.ui.view">
    <field name="name">odoo.repository.tree</field>
    <field name="model">odoo.repository</field>
    <field name="arch" type="xml">
      <tree>
        <field name="org_id" />
        <field name="name" />
        <field name="repo_url" widget="url" />
        <field name="to_scan" />
        <field name="repo_type" />
      </tree>
    </field>
  </record>

  <record id="odoo_repository_view_search" model="ir.ui.view">
    <field name="name">odoo.repository.search</field>
    <field name="model">odoo.repository</field>
    <field name="type">search</field>
    <field name="arch" type="xml">
      <search>
        <field name="name" />
        <field name="org_id" />
        <filter name="to_scan" string="To scan" domain="[('to_scan', '=', True)]" />
        <filter name="archived" string="Archived" domain="[('active', '=', False)]" />
        <group expand="0" string="Group By">
          <filter
                        name="group_by_org_id"
                        string="Organization"
                        context="{'group_by': 'org_id'}"
                    />
        </group>
      </search>
    </field>
  </record>

  <record id="odoo_repository_action" model="ir.actions.act_window">
    <field name="name">Repositories</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">odoo.repository</field>
    <field name="view_id" ref="odoo_repository_view_tree" />
  </record>

  <menuitem
        id="odoo_repository_menu"
        parent="config_odoo_repository_menu"
        action="odoo_repository_action"
    />

</odoo>
