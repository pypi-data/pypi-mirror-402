## ğŸš€ Quick Start
'''python
from wisetimer import Timer
from wisetimer import Analyze
from wisetimer import Benchmark  
import time
timer = Timer()
a = Analyze()

# Basic timer

print(timer.done())
print("Hello wisetimer!") 
print(timer.done())

# Context manager for benchmarking

with Timer() as t:
    x = 1 + 2 + 3 + 4 + 5 + 6 + 7 + 8 + 9 + 0 

# Decorator for function timing

@Timer.funcTimer 
def example():
    return "Hello world!"
result = example()
print(result)

# Benchmark comparison

with Benchmark("a"):
    print("Hello wisetimer!")

with Benchmark("b"):
    print("Hello wisetimer!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!")
Benchmark().compar()
Benchmark().reset()
with Benchmark("c"):
    print("Hello wisetimer")
with Benchmark("d"):
    print("Hello wisetimer!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!")
Benchmark().compar()

# Time limits

timer2 = Timer()
timer2.limit(0.1)# Set 0.1 second limit
for x in range(5):
    time.sleep(0.001)
    timer2.limitRevise()
    print("âœ…Limit revise = OK")

# Code analysis

code = code = '''a = "aaaaaaaaa"
b = "bbbbbbbbbb"
