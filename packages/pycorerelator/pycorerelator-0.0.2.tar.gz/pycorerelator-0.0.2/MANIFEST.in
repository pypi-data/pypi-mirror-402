# Include essential files
include README-pypi.md
include LICENSE
include requirements.txt
include pyproject.toml

# Include the package
recursive-include pyCoreRelator *.py

# Exclude everything else
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude .DS_Store

# Exclude directories
prune example_data
prune outputs
prune old codes
prune dtw_graphics
prune mapinfo
prune pickeddepth
prune pickeddepth_ages
prune SegmentPair_DTW_frames
prune TestCores
prune dist
prune build
prune *.egg-info

# Exclude notebooks and other files
exclude *.ipynb
exclude *.gif
exclude *.mp4
exclude *.png
exclude *.ai
exclude *.svg
exclude run_*.py
exclude environment.yml
exclude FUNCTION_DOCUMENTATION.md

