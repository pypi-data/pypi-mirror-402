{
    "nodes": {
        "my_webhook": {
            "type": "trigger_webhook",
            "config": {
                "path": "/test-llm",
                "method": "POST",
                "test_payload": {
                    "message": "Say hello in Spanish!"
                }
            }
        },
        "llm_step": {
            "type": "llm_call",
            "config": {
                "provider": "openai",
                "api_key": "${OPENAI_API_KEY}",
                "model": "gpt-4o-mini",
                "system_message": "You are a helpful assistant.",
                "max_tokens": 50,
                "stream": true
            }
        },
        "log_step": {
            "type": "log"
        }
    },
    "edges": [
        {
            "from": "my_webhook.output.message",
            "to": "llm_step.prompt"
        },
        {
            "from": "llm_step.output",
            "to": "log_step.input"
        }
    ]
}