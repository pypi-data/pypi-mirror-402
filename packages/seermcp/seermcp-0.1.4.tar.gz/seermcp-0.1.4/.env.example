# ============================================================================
# Seer Platform - Environment Variables
# ============================================================================
# Copy this file to .env and fill in your actual values
# cp .env.example .env

# ============================================================================
# LangGraph API Configuration (Required for Railway/Production)
# ============================================================================

# Postgres connection string for checkpoints and thread persistence
# Format: postgresql://user:password@host:port/database
# For Railway: Use the DATABASE_URL provided by Railway Postgres plugin
# Example: postgresql://postgres:password@containers-us-west-xxx.railway.app:5432/seer
DATABASE_URL=

# Optional: Redis connection string for async tasks
# Format: redis://user:password@host:port/db
# REDIS_URI=

# ============================================================================
# LLM & AI Services (Required)
# ============================================================================

# OpenAI API key for LLM calls and embeddings
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=

# ============================================================================
# Pinecone Vector Search (Optional - if using tool search)
# ============================================================================

# Pinecone API key for semantic tool search
# Get from: https://app.pinecone.io/
PINECONE_API_KEY=

# Pinecone index name for tool search
PINECONE_INDEX_NAME=

# ============================================================================
# Web Search & External APIs (Optional)
# ============================================================================

# Tavily API key for web search
# Get from: https://tavily.com/
TAVILY_API_KEY=

# GitHub token for sandbox provisioning and repo access
# Get from: https://github.com/settings/tokens
GITHUB_TOKEN=

# Context7 API key for MCP tools
# Get from: https://context7.com/
CONTEXT7_API_KEY=

# ============================================================================
# PostHog Analytics (Enabled by Default)
# ============================================================================

# PostHog project API key (uses Seer-hosted instance by default)
# Override with your own PostHog instance if desired
# POSTHOG_API_KEY=your_custom_key

# PostHog host URL (uses Seer-hosted instance by default)
# Override with your own instance:
# - PostHog Cloud US: https://app.posthog.com
# - PostHog Cloud EU: https://eu.posthog.com
# - Self-hosted: https://your-posthog-instance.com
# POSTHOG_HOST=https://app.posthog.com

# Enable PostHog analytics and error tracking (default: true)
POSTHOG_ENABLED=true

# Opt-out of all telemetry (privacy mode)
# Set to true to completely disable analytics even if POSTHOG_ENABLED=true
POSTHOG_OPT_OUT=false

# Error sampling rate (0.0 to 1.0, default: 1.0)
# Reduce to sample errors instead of tracking all
POSTHOG_ERROR_SAMPLING_RATE=1.0

# Filter sensitive data (PII, secrets) from events (default: true)
POSTHOG_FILTER_SENSITIVE_DATA=true
