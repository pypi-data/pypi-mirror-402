# Database
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/rag_memory_web

# OpenAI API Key (required)
OPENAI_API_KEY=your-openai-api-key-here

# LLM Configuration
# Model to use for the RAG agent
LLM_MODEL=gpt-5-mini

# Temperature for LLM responses
# IMPORTANT: GPT-5 series models (gpt-5-mini, gpt-5) only support temperature=1.0
# Other models (gpt-4o-mini, gpt-4o) support 0.0-2.0
LLM_TEMPERATURE=1.0

# Google Search API (optional - falls back to DuckDuckGo if not provided)
GOOGLE_API_KEY=your-google-api-key-here
GOOGLE_CSE_ID=your-google-cse-id-here

# Search tool rate limiting (requests per second)
GOOGLE_SEARCH_RATE_LIMIT=1.0
DUCKDUCKGO_SEARCH_RATE_LIMIT=1.0
FETCH_URL_RATE_LIMIT=0.5

# Server configuration
HOST=0.0.0.0
PORT=8000
DEBUG=False

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# MCP Server
MCP_SERVER_URL=http://localhost:18000/mcp
MCP_TIMEOUT=10.0
