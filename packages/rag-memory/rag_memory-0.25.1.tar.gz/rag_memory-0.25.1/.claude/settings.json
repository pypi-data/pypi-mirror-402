{
  "hooks": {
    "PreToolUse": [
      {
        "matcher": "mcp__rag-memory__(create_collection|delete_collection|update_collection_metadata|update_document|delete_document|manage_collection_link|ingest_.*)",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/kb-modification-approval.py",
            "timeout": 10
          }
        ]
      },
      {
        "matcher": "mcp__atlassian__(createConfluencePage|updateConfluencePage|createConfluenceFooterComment|createConfluenceInlineComment|createJiraIssue|editJiraIssue|addCommentToJiraIssue|transitionJiraIssue|addWorklogToJiraIssue)",
        "hooks": [
          {
            "type": "command",
            "command": "\"$CLAUDE_PROJECT_DIR\"/.claude/hooks/kb-modification-approval.py",
            "timeout": 10
          }
        ]
      }
    ]
  },
  "permissions": {
    "allow": [
      "Read(**)",
      "Glob(**)",
      "WebFetch(domain:render.com)",
      "Bash(pwd)",
      "Bash(ls :*)",
      "Bash(cat :*)",
      "Bash(which :*)",
      "Bash(grep :*)",
      "Bash(find :*)",
      "Bash(tree :*)",
      "Bash(git status :*)",
      "Bash(git diff :*)",
      "Bash(git log :*)",
      "Bash(git show :*)",
      "Bash(docker ps :*)",
      "Bash(docker logs :*)",
      "Bash(docker inspect :*)",
      "Bash(uv run pytest :*)",
      "Bash(uv run rag status :*)",
      "Bash(uv run rag search :*)",
      "Bash(uv run rag logs :*)",
      "Bash(uv run rag collection list :*)",
      "Bash(uv run rag collection info :*)",
      "Bash(uv run rag document list :*)",
      "Bash(uv run rag document view :*)",
      "Bash(uv run rag analyze :*)",
      "Bash(uv run rag graph :*)"
    ],
    "ask": [
      "Bash(python :*)",
      "Bash(python3 :*)",
      "Bash(uv run python :*)",
      "Bash(./scripts/:*)",
      "Bash(uv run scripts/:*)",
      "Bash(uv run rag :*)",
      "Bash(rag :*)",
      "Bash(docker-compose :*)",
      "Bash(docker stop :*)",
      "Bash(docker rm :*)",
      "Bash(docker kill :*)",
      "Bash(git push :*)",
      "Bash(git commit :*)",
      "Bash(git add :*)",
      "Write(**)",
      "Edit(**)"
    ],
    "deny": [
      "Read(**/.env)",
      "Read(**/.env.development)",
      "Read(**/.env.dev)",
      "Read(**/.env.test)",
      "Read(**/.env.local)",
      "Read(**/.env.production)",
      "Read(**/.env.staging)",
      "Read(**/secrets/**)",
      "Read(**/*.key)",
      "Read(**/*.pem)",
      "Edit(**/.env)",
      "Edit(**/.env.development)",
      "Edit(**/.env.dev)",
      "Edit(**/.env.test)",
      "Edit(**/.env.local)",
      "Edit(**/.env.production)",
      "Edit(**/.env.staging)",
      "Write(**/.env)",
      "Write(**/.env.development)",
      "Write(**/.env.dev)",
      "Write(**/.env.test)",
      "Write(**/.env.local)",
      "Write(**/.env.production)",
      "Write(**/.env.staging)"
    ]
  }
}