{
  "$schema": "https://static.modelcontextprotocol.io/schemas/2025-12-11/server.schema.json",
  "name": "io.github.egoughnour/code-firewall-mcp",
  "description": "Structural similarity-based code filter. Stops malicious code pattern reaching execution tools.",
  "repository": {
    "url": "https://github.com/egoughnour/code-firewall-mcp",
    "source": "github"
  },
  "version": "0.6.0",
  "packages": [
    {
      "registryType": "pypi",
      "identifier": "code-firewall-mcp",
      "version": "0.6.0",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "FIREWALL_DATA_DIR",
          "description": "Directory for storing ChromaDB data",
          "isRequired": false,
          "format": "string",
          "isSecret": false
        },
        {
          "name": "OLLAMA_URL",
          "description": "URL for Ollama server (default: http://localhost:11434)",
          "isRequired": false,
          "format": "string",
          "isSecret": false
        },
        {
          "name": "EMBEDDING_MODEL",
          "description": "Ollama embedding model (default: nomic-embed-text)",
          "isRequired": false,
          "format": "string",
          "isSecret": false
        },
        {
          "name": "SIMILARITY_THRESHOLD",
          "description": "Block threshold 0-1 (default: 0.85)",
          "isRequired": false,
          "format": "string",
          "isSecret": false
        }
      ]
    },
    {
      "registryType": "mcpb",
      "identifier": "https://github.com/egoughnour/code-firewall-mcp/releases/latest/download/code-firewall-mcp.mcpb",
      "transport": {
        "type": "stdio"
      },
      "environmentVariables": [
        {
          "name": "FIREWALL_DATA_DIR",
          "description": "Directory for storing ChromaDB data",
          "isRequired": false,
          "format": "string",
          "isSecret": false
        },
        {
          "name": "OLLAMA_URL",
          "description": "URL for Ollama server (default: http://localhost:11434)",
          "isRequired": false,
          "format": "string",
          "isSecret": false
        },
        {
          "name": "EMBEDDING_MODEL",
          "description": "Ollama embedding model (default: nomic-embed-text)",
          "isRequired": false,
          "format": "string",
          "isSecret": false
        },
        {
          "name": "SIMILARITY_THRESHOLD",
          "description": "Block threshold 0-1 (default: 0.85)",
          "isRequired": false,
          "format": "string",
          "isSecret": false
        }
      ]
    }
  ]
}
