{
    "patterns": {
        "openai_api_key": {
            "regex": "sk-[a-zA-Z0-9]{20,}",
            "severity": "HIGH",
            "description": "OpenAI API key"
        },
        "anthropic_api_key": {
            "regex": "sk-ant-[a-zA-Z0-9\\-]{20,}",
            "severity": "HIGH",
            "description": "Anthropic API key"
        },
        "aws_access_key": {
            "regex": "AKIA[0-9A-Z]{16}",
            "severity": "HIGH",
            "description": "AWS Access Key ID"
        },
        "aws_secret_key": {
            "regex": "(?i)aws_secret_access_key\\s*[=:]\\s*[\"']?[A-Za-z0-9/+=]{40}",
            "severity": "HIGH",
            "description": "AWS Secret Access Key"
        },
        "gemini_api_key": {
            "regex": "AIza[0-9A-Za-z\\-_]{35}",
            "severity": "HIGH",
            "description": "Google Gemini/Cloud API key"
        },
        "github_token": {
            "regex": "ghp_[a-zA-Z0-9]{36}",
            "severity": "HIGH",
            "description": "GitHub Personal Access Token"
        },
        "private_key_header": {
            "regex": "-----BEGIN\\s+(RSA\\s+|EC\\s+|DSA\\s+|OPENSSH\\s+)?PRIVATE KEY-----",
            "severity": "HIGH",
            "description": "Private key file header"
        },
        "generic_password": {
            "regex": "(?i)(password|passwd|pwd)\\s*[=:]\\s*[\"'][^\"']{8,}[\"']",
            "severity": "MEDIUM",
            "description": "Hardcoded password assignment"
        },
        "generic_secret": {
            "regex": "(?i)(secret|token|api_key|apikey)\\s*[=:]\\s*[\"'][^\"']{10,}[\"']",
            "severity": "MEDIUM",
            "description": "Generic secret/token assignment"
        },
        "jwt_token": {
            "regex": "eyJ[a-zA-Z0-9_-]*\\.eyJ[a-zA-Z0-9_-]*\\.[a-zA-Z0-9_-]*",
            "severity": "MEDIUM",
            "description": "JWT token"
        }
    },
    "ignore_patterns": {
        "test_files": [
            "**/test_*.py",
            "**/*_test.py",
            "**/tests/**",
            "**/*.test.js",
            "**/*.spec.ts"
        ],
        "placeholder_values": [
            "your-api-key-here",
            "xxx",
            "placeholder",
            "example",
            "test-key",
            "fake",
            "mock"
        ]
    }
}