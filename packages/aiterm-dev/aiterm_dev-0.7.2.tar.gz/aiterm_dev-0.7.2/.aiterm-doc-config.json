{
  "project_name": "aiterm",
  "project_type": "python-cli",
  "description": "Terminal optimizer CLI for AI-assisted development with Claude Code and Gemini CLI",

  "changelog": {
    "file": "CHANGELOG.md",
    "sections": [
      "Breaking Changes",
      "Features",
      "Bug Fixes",
      "Documentation",
      "Testing",
      "Build System",
      "Performance",
      "Other"
    ],
    "commit_types": {
      "feat": "Features",
      "fix": "Bug Fixes",
      "docs": "Documentation",
      "test": "Testing",
      "build": "Build System",
      "ci": "Build System",
      "perf": "Performance",
      "refactor": "Other",
      "style": "Other",
      "chore": "Other"
    },
    "exclude_patterns": [
      "^Merge branch",
      "^Merge pull request",
      "WIP:",
      "temp:",
      "wip:"
    ],
    "include_commit_links": true,
    "repo_url": "https://github.com/Data-Wise/aiterm"
  },

  "mkdocs": {
    "file": "mkdocs.yml",
    "section_patterns": {
      "getting-started": ["install", "quick", "setup", "quickstart"],
      "guides": ["guide", "tutorial", "how-to", "integration", "user"],
      "reference": ["api", "commands", "config", "configuration", "troubleshoot"],
      "architecture": ["architecture", "design", "implementation", "summary"],
      "documentation-automation": ["auto-update", "workflow"]
    },
    "exclude_patterns": [
      "README.md",
      "CHANGELOG.md",
      "LICENSE.md",
      "CONTRIBUTING.md",
      "PHASE-*.md",
      "BRAINSTORM-*.md",
      "PLANNING-*.md",
      "SESSION-*.md",
      "WORKFLOW-*.md",
      "AITERM-COMPLETE-*.md",
      "AITERM-CREATOR-*.md",
      "AITERM-FINAL-*.md",
      "AITERM-VISION-*.md",
      "INTEGRATION-*.md",
      "RFORGE-*.md",
      "COMMAND-*.md",
      "*-BRAINSTORM.md",
      "*-PROPOSAL.md",
      "IMPLEMENTATION-PRIORITIES.md",
      "IDEAS.md",
      "ROADMAP.md"
    ],
    "auto_add_orphans": true,
    "validate_build": true,
    "build_command": "mkdocs build --strict"
  },

  "claude_md": {
    "file": "CLAUDE.md",
    "update_progress": true,
    "update_date": true,
    "prepend_to_section": "Just Completed",
    "section_marker": "## âœ… Just Completed",
    "max_entries": 10,
    "generate_summary": true,
    "include_file_stats": true
  },

  "git": {
    "default_branch": "main",
    "dev_branch": "dev",
    "remote": "origin"
  },

  "backup": {
    "enabled": true,
    "timestamp_format": "%Y%m%d-%H%M%S",
    "keep_backups": 5
  }
}
