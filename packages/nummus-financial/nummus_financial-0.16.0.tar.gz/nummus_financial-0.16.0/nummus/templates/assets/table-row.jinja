<label class="flex w-full items-center gap-2 py-0.5">
  <div>{{ valuation.date }}</div>
  <div class="ml-auto">{{ cf(valuation.value) }}</div>
  {% if ctx.editable %}
    <button
      class="btn-text btn-sq"
      hx-get="{{ url_for('assets.valuation', uri=valuation.uri) }}"
      hx-disabled-elt="this"
      hx-target="#dialog"
      hx-swap="innerHTML show:#dialog:top"
      hx-push-url="#dialog"
    >
      <icon>edit</icon>
    </button>
  {% endif %}
</label>
