<div
  hx-get="{{ url_for('common.page_dashboard') }}"
  hx-trigger="account from:body, asset from:body"
  hx-target="#main"
>
  <h1>Dashboard</h1>
</div>
<div class="dashboard">
  <div
    hx-get="{{ url_for('net_worth.dashboard') }}"
    hx-trigger="load"
    hx-indicator="find .spinner"
    hx-target="this"
    hx-swap="outerHTML"
  >
    {% include "shared/spinner.jinja" %}
  </div>
  <div
    class="row-span-2"
    hx-get="{{ url_for('income.dashboard') }}"
    hx-trigger="load"
    hx-indicator="find .spinner"
    hx-target="this"
    hx-swap="outerHTML"
  >
    {% include "shared/spinner.jinja" %}
  </div>
  <div
    class="row-span-2"
    hx-get="{{ url_for('spending.dashboard') }}"
    hx-trigger="load"
    hx-indicator="find .spinner"
    hx-target="this"
    hx-swap="outerHTML"
  >
    {% include "shared/spinner.jinja" %}
  </div>
  <div
    hx-get="{{ url_for('emergency_fund.dashboard') }}"
    hx-trigger="load"
    hx-indicator="find .spinner"
    hx-target="this"
    hx-swap="outerHTML"
  >
    {% include "shared/spinner.jinja" %}
  </div>
  <div
    hx-get="{{ url_for('performance.dashboard') }}"
    hx-trigger="load"
    hx-indicator="find .spinner"
    hx-target="this"
    hx-swap="outerHTML"
  >
    {% include "shared/spinner.jinja" %}
  </div>
</div>
