<div>
  <a
    href="{{ url_for('net_worth.page') }}"
    hx-get="{{ url_for('net_worth.page') }}"
    hx-target="#main"
    hx-swap="innerHTML show:window:top"
    hx-push-url="true"
  >
    <h1>Net worth</h1>
    <h2>{{ ctx.currency_format(ctx.net_worth, coarse=True) }}</h2>
    <icon>chevron_forward</icon>
  </a>
  <div class="grow">
    <canvas id="net-worth-chart-canvas-dashboard" hx-preserve></canvas>
  </div>
  <div>
    <script>
      // prettier-ignore
      onLoad(() => {
        netWorth.updateDashboard(
          JSON.parse('{{ ctx.chart | tojson }}'),
          JSON.parse('{{ ctx.currency_format._asdict() | tojson }}'),
        );
      });
    </script>
  </div>
</div>
