<div hx-target="#main" hx-swap="innerHTML show:window:top" hx-push-url="true">
  <a
    href="{{ url_for('performance.page') }}"
    hx-get="{{ url_for('performance.page') }}"
    hx-disabled-elt="this"
  >
    <h1>Investing performance</h1>
    <h2 class="{{ ctx.pnl | pnl_color }} flex items-center justify-end">
      {{ ctx.currency_format(ctx.pnl, coarse=True) }}
      <icon class="sm">{{ ctx.pnl | pnl_arrow }}</icon>
    </h2>
    <icon>chevron_forward</icon>
  </a>
  <a class="border-primary group relative flex border-l-4 pl-1">
    <div class="grow truncate">Portfolio</div>
    <div class="{{ ctx.twrr | pnl_color }} flex items-center justify-end">
      {{ ctx.twrr | percent }}
      <icon class="sm">{{ ctx.twrr | pnl_arrow }}</icon>
    </div>
    <div
      class="bg-primary absolute bottom-0 left-0 h-0.5 w-0 transition-[width] duration-500 md:group-hover:w-full"
    ></div>
  </a>
  {% for index, twrr in ctx.indices.items() %}
    <a
      class="border-tertiary group relative flex border-l-4 pl-1"
      href="{{ url_for('performance.page', index=index) }}"
      hx-get="{{ url_for('performance.page', index=index) }}"
      hx-disabled-elt="this"
    >
      <div class="grow truncate">{{ index }}</div>
      <div class="{{ twrr | pnl_color }} flex items-center justify-end">
        {{ twrr | percent }}
        <icon class="sm">{{ twrr | pnl_arrow }}</icon>
      </div>
      <icon>chevron_forward</icon>
      <div
        class="bg-tertiary absolute bottom-0 left-0 h-0.5 w-0 transition-[width] duration-500 md:group-hover:w-full"
      ></div>
    </a>
  {% endfor %}
  <i class="text-center text-sm">over the past 6 months</i>
</div>
