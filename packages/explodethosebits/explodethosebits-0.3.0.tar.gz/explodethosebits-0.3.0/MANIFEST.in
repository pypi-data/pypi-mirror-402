# Include the license and readme
include LICENSE
include README.md

# Include CMake files
include CMakeLists.txt
recursive-include tests CMakeLists.txt

# Include C++ source and headers
recursive-include src *.cpp *.cu
recursive-include include *.hpp *.cuh

# Include Python source
recursive-include python *.py *.pyi *.cpp

# Include data files
recursive-include data *.json *.yaml

# Exclude build artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude *.dylib
global-exclude *.dll
global-exclude .git*
global-exclude .DS_Store
prune build
prune dist
prune *.egg-info
