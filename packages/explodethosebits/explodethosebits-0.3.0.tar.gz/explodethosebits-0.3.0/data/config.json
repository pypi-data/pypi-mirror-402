{
  "_comment": "ExplodeThoseBits (etb) Configuration File - JSON Format",
  
  "signature_dictionary_path": "signatures.json",
  
  "early_stopping": {
    "_comment": "Multi-level early stopping reduces search space from O(8^n) to O(8^d)",
    "level1_bytes": 4,
    "level2_bytes": 8,
    "level3_bytes": 16,
    "adaptive_thresholds": true,
    "level1_threshold": 0.2,
    "level2_threshold": 0.3,
    "level3_threshold": 0.4
  },
  
  "entropy_thresholds": {
    "_comment": "Shannon entropy bounds [0.0, 8.0]",
    "min": 0.1,
    "max": 7.9
  },
  
  "heuristics": {
    "weights": {
      "_comment": "Composite scoring weights (should sum to 1.0)",
      "signature": 0.40,
      "heuristic": 0.30,
      "length": 0.15,
      "structure": 0.15
    },
    "min_printable_ratio": 0.95,
    "max_null_run": 16
  },
  
  "bit_pruning": {
    "_comment": "Mode: exhaustive, msb_only, single_bit, or custom",
    "mode": "exhaustive",
    "custom_mask": 255
  },
  
  "memoization": {
    "enabled": true,
    "max_cache_size_mb": 1024,
    "max_entries": 1000000
  },
  
  "performance": {
    "max_parallel_workers": 8,
    "cuda_streams": 4,
    "batch_size": 65536
  },
  
  "output": {
    "top_n_results": 10,
    "save_partials": false,
    "include_paths": true,
    "metrics_verbosity": "full"
  }
}
