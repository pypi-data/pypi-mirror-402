# MANIFEST.in - Controls what files are included in the source distribution

# Include essential files
include README.md
include LICENSE
include pyproject.toml

# Include package data
recursive-include keradb *.py

# Include examples (users want these)
recursive-include examples *.py

# Exclude development documentation folder
recursive-exclude dev-docs *

# Exclude test files
recursive-exclude tests *
recursive-exclude benchmarks *

# Exclude old/legacy code
recursive-exclude nosqlite *

# Exclude Python cache and build artifacts
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *.so
global-exclude .DS_Store

# Exclude database files
global-exclude *.ndb

# Exclude IDE and version control
recursive-exclude .vscode *
recursive-exclude .idea *
recursive-exclude .git *
global-exclude .gitignore
global-exclude .gitattributes

# Exclude documentation build artifacts
recursive-exclude docs/_build *
