{
  "openapi": "3.0.3",
  "info": {
    "title": "AllOf Test API",
    "version": "1.0.0"
  },
  "servers": [
    {"url": "https://api.example.com"}
  ],
  "paths": {
    "/pets/{id}": {
      "get": {
        "operationId": "getPet",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "required": true,
            "schema": {"type": "string"}
          }
        ],
        "responses": {
          "200": {
            "description": "A pet",
            "content": {
              "application/json": {
                "schema": {"$ref": "#/components/schemas/Dog"}
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Animal": {
        "type": "object",
        "description": "Base animal type",
        "properties": {
          "id": {"type": "string"},
          "name": {"type": "string"}
        },
        "required": ["id", "name"]
      },
      "Dog": {
        "allOf": [
          {"$ref": "#/components/schemas/Animal"},
          {
            "type": "object",
            "description": "A dog",
            "properties": {
              "breed": {"type": "string"},
              "age": {"type": "integer"}
            },
            "required": ["breed"]
          }
        ]
      },
      "Cat": {
        "allOf": [
          {"$ref": "#/components/schemas/Animal"},
          {
            "type": "object",
            "properties": {
              "indoor": {"type": "boolean"}
            }
          }
        ]
      },
      "Labrador": {
        "description": "A labrador retriever",
        "allOf": [
          {"$ref": "#/components/schemas/Dog"},
          {
            "type": "object",
            "properties": {
              "color": {"type": "string"}
            },
            "required": ["color"]
          }
        ]
      }
    }
  }
}
