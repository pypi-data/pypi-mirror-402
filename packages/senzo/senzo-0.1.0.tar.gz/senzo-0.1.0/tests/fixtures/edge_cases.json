{
  "openapi": "3.0.3",
  "info": {"title": "Edge Cases API", "version": "1.0.0"},
  "paths": {
    "/items": {
      "get": {
        "operationId": "listItems",
        "parameters": [
          {"name": "limit", "in": "query", "schema": {"type": "integer"}},
          {"name": "HTTPHeader", "in": "query", "schema": {"type": "string"}}
        ],
        "responses": {"200": {"description": "OK"}}
      }
    }
  },
  "components": {
    "schemas": {
      "HTTPRequest": {
        "type": "object",
        "description": "Tests snake_case conversion of HTTPRequest -> http_request",
        "properties": {
          "http_header": {"type": "string"},
          "createdAt": {"type": "string", "format": "date-time"}
        }
      },
      "Status": {
        "type": "string",
        "description": "Tests enum with special characters",
        "enum": ["active", "in-progress", "100%", "COMPLETED"]
      },
      "NullableStatus": {
        "type": "string",
        "description": "Tests nullable enum",
        "enum": ["on", "off"],
        "nullable": true
      },
      "ItemWithInlineEnum": {
        "type": "object",
        "description": "Tests inline enum without explicit type",
        "properties": {
          "kind": {"enum": ["a", "b", "c"]}
        }
      },
      "FormatTypes": {
        "type": "object",
        "description": "Tests various format types",
        "properties": {
          "created_date": {"type": "string", "format": "date"},
          "created_datetime": {"type": "string", "format": "date-time"},
          "item_uuid": {"type": "string", "format": "uuid"}
        }
      }
    }
  }
}
