{
  "compilerOptions": {
    // Output
    "outDir": "dist",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noEmit": false,

    // Node + ESM
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "ES2020",

    // Strictness
    "strict": true,
    "skipLibCheck": true,

    // JS interop
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true
  },

  // Include all your source code
  "include": ["src"]
}
