# Include documentation
include README.md
include QUICKSTART.md
include LICENSE
include PUBLISH.md

# Include requirements
include requirements.txt

# Include configuration files
recursive-include src *.yaml
recursive-include src *.json

# Include assets (screenshots for documentation)
recursive-include assets *.png
recursive-include assets *.gif
recursive-include assets *.jpg

# Exclude development files
exclude .gitignore
exclude *.sh
exclude *.bat
exclude clean.sh
exclude install.sh
exclude install.bat
exclude build.sh
exclude quick-build.sh

# Exclude tests and development
recursive-exclude tests *
recursive-exclude venv *
recursive-exclude build-venv *
recursive-exclude static *
exclude pytest.ini
exclude .pytest_cache

# Exclude IDE files
recursive-exclude .vscode *
recursive-exclude .idea *
exclude *.swp
exclude .DS_Store

# Exclude build artifacts
recursive-exclude build *
recursive-exclude dist *
recursive-exclude *.egg-info *