{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ecp.amcrypto.org/ecp/schemas/ecp-package.schema.json",
  "title": "Expert Context Pack (ECP) Package Manifest v1.0",
  "type": "object",
  "required": [
    "ecp_package_version",
    "created_at",
    "skill_root_dir",
    "skill_name",
    "ecp_version",
    "excludes",
    "files",
    "package_sha256"
  ],
  "properties": {
    "ecp_package_version": {
      "type": "string",
      "const": "1.0"
    },
    "created_at": {
      "type": "string",
      "minLength": 1
    },
    "skill_root_dir": {
      "type": "string",
      "minLength": 1
    },
    "skill_name": {
      "type": "string",
      "minLength": 1
    },
    "ecp_version": {
      "type": "string",
      "minLength": 1
    },
    "excludes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "path",
          "sha256"
        ],
        "properties": {
          "path": {
            "type": "string",
            "minLength": 1
          },
          "sha256": {
            "type": "string",
            "minLength": 1
          },
          "size": {
            "type": "integer",
            "minimum": 0
          }
        },
        "additionalProperties": true
      }
    },
    "package_sha256": {
      "type": "string",
      "minLength": 1
    },
    "signatures": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
