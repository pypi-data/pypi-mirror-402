{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ecp.amcrypto.org/ecp/schemas/ecp-sqlite-fts-index.schema.json",
  "title": "Expert Context Pack (ECP) SQLite FTS Index Metadata (sqlite-fts-index-v1)",
  "type": "object",
  "required": [
    "format",
    "index_id",
    "created_at",
    "built_at",
    "sources",
    "config",
    "sqlite"
  ],
  "properties": {
    "format": {
      "type": "string",
      "const": "sqlite-fts-index-v1"
    },
    "index_id": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "minLength": 1
    },
    "built_at": {
      "type": "string",
      "minLength": 1
    },
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "source_id",
          "source_type",
          "uri",
          "revision"
        ],
        "properties": {
          "source_id": {
            "type": "string",
            "minLength": 1
          },
          "source_type": {
            "type": "string",
            "minLength": 1
          },
          "uri": {
            "type": "string",
            "minLength": 1
          },
          "revision": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": true
          },
          "classification": {
            "type": "string"
          },
          "license": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "config": {
      "type": "object",
      "required": [
        "tokenizer",
        "chunking"
      ],
      "properties": {
        "tokenizer": {
          "type": "string",
          "minLength": 1
        },
        "chunking": {
          "type": "object",
          "required": [
            "method"
          ],
          "properties": {
            "method": {
              "type": "string",
              "minLength": 1
            },
            "max_chars": {
              "type": "integer",
              "minimum": 1
            },
            "overlap_chars": {
              "type": "integer",
              "minimum": 0
            },
            "language_hints": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": true
        },
        "max_file_bytes": {
          "type": "integer",
          "minimum": 1
        },
        "max_files": {
          "type": "integer",
          "minimum": 1
        }
      },
      "additionalProperties": true
    },
    "sqlite": {
      "type": "object",
      "required": [
        "path",
        "table"
      ],
      "properties": {
        "path": {
          "type": "string",
          "minLength": 1
        },
        "table": {
          "type": "string",
          "minLength": 1
        },
        "fts5": {
          "type": "boolean"
        }
      },
      "additionalProperties": true
    },
    "stats": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
