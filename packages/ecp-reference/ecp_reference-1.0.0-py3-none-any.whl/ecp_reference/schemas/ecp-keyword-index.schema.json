{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ecp.amcrypto.org/ecp/schemas/ecp-keyword-index.schema.json",
  "title": "Expert Context Pack (ECP) Keyword Index Payload (keyword-index-v2)",
  "type": "object",
  "required": [
    "format",
    "index_id",
    "created_at",
    "built_at",
    "sources",
    "config",
    "documents",
    "terms"
  ],
  "properties": {
    "format": {
      "type": "string",
      "const": "keyword-index-v2"
    },
    "index_id": {
      "type": "string",
      "minLength": 1
    },
    "created_at": {
      "type": "string",
      "minLength": 1
    },
    "built_at": {
      "type": "string",
      "minLength": 1
    },
    "sources": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "source_id",
          "source_type",
          "uri",
          "revision"
        ],
        "properties": {
          "source_id": {
            "type": "string",
            "minLength": 1
          },
          "source_type": {
            "type": "string",
            "minLength": 1
          },
          "uri": {
            "type": "string",
            "minLength": 1
          },
          "revision": {
            "type": "object",
            "minProperties": 1,
            "additionalProperties": true
          },
          "classification": {
            "type": "string"
          },
          "license": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "config": {
      "type": "object",
      "required": [
        "tokenizer"
      ],
      "properties": {
        "tokenizer": {
          "type": "string"
        },
        "chunking": {
          "type": "object",
          "properties": {
            "method": {
              "type": "string"
            },
            "max_chars": {
              "type": "integer",
              "minimum": 1
            },
            "overlap_chars": {
              "type": "integer",
              "minimum": 0
            },
            "language_hints": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          },
          "additionalProperties": true
        }
      },
      "additionalProperties": true
    },
    "documents": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "source_id",
          "path"
        ],
        "properties": {
          "source_id": {
            "type": "string"
          },
          "path": {
            "type": "string"
          },
          "start_line": {
            "type": "integer",
            "minimum": 1
          },
          "end_line": {
            "type": "integer",
            "minimum": 1
          },
          "file_sha256": {
            "type": "string"
          },
          "chunk_sha256": {
            "type": "string"
          }
        },
        "additionalProperties": true
      }
    },
    "terms": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "required": [
          "df",
          "postings"
        ],
        "properties": {
          "df": {
            "type": "integer",
            "minimum": 0
          },
          "postings": {
            "type": "array",
            "items": {
              "type": "array",
              "minItems": 2,
              "maxItems": 2,
              "prefixItems": [
                {
                  "type": "string",
                  "minLength": 1
                },
                {
                  "type": "integer",
                  "minimum": 0
                }
              ],
              "items": false
            }
          }
        },
        "additionalProperties": true
      }
    },
    "file_chunks": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "additionalProperties": true
}
