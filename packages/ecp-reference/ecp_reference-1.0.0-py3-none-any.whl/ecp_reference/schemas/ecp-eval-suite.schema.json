{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://ecp.amcrypto.org/ecp/schemas/ecp-eval-suite.schema.json",
  "title": "Expert Context Pack (ECP) Eval Suite v1.0",
  "type": "object",
  "required": [
    "suite_id",
    "suite_version",
    "cases"
  ],
  "properties": {
    "suite_id": {
      "type": "string",
      "minLength": 1
    },
    "suite_version": {
      "type": "string",
      "minLength": 1
    },
    "description": {
      "type": "string"
    },
    "cases": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": [
          "case_id",
          "mode",
          "question"
        ],
        "properties": {
          "case_id": {
            "type": "string"
          },
          "mode": {
            "type": "string",
            "enum": [
              "ephemeral",
              "persistent",
              "summarized"
            ]
          },
          "question": {
            "type": "string"
          },
          "top_k": {
            "type": "integer",
            "minimum": 1
          },
          "filters": {
            "type": "object",
            "properties": {
              "source_id": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                ]
              },
              "path_prefix": {
                "oneOf": [
                  {
                    "type": "string"
                  },
                  {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                ]
              }
            },
            "additionalProperties": true
          },
          "assertions": {
            "type": "object",
            "properties": {
              "must_cite": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "must_not_cite": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "must_cite_source_ids": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "min_citations": {
                "type": "integer",
                "minimum": 0
              },
              "max_citations": {
                "type": "integer",
                "minimum": 0
              },
              "answer_must_include": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "answer_must_not_include": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "answer_must_match": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "citations_must_resolve": {
                "type": "boolean"
              },
              "citations_must_match_snippets": {
                "type": "boolean"
              },
              "citations_must_match_hashes": {
                "type": "boolean"
              },
              "response_must_include_fields": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "as_of_must_include_source_ids": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            },
            "additionalProperties": true
          }
        },
        "additionalProperties": true
      }
    }
  },
  "additionalProperties": true
}
