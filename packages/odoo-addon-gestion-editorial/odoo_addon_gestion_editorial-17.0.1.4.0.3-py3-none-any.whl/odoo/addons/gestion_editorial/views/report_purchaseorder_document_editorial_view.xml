<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <template id="report_purchaseorder_document_editorial_view" inherit_id="purchase.report_purchaseorder_document">

            <xpath expr="//t[contains(@t-set, 'o')]" position="after">
                <t t-set="display_barcode_column" t-value="any(line.product_barcode for line in o.order_line)"/>
            </xpath>

            <xpath expr="//th[@name='th_description']" position="before">
                <t t-if="display_barcode_column">
                    <th name="th_barcode" class="text-left"><t t-out="'Barcode / ISBN'"/></th>
                </t>
            </xpath>

            <xpath expr="//td[@id='product']" position="before">
                <t t-if="display_barcode_column">
                    <td class="text-left">
                        <span t-field="line.product_id.barcode"/>
                    </td>
                </t>
            </xpath>
        </template>
    </data>
</odoo>
