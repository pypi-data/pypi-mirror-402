from pathlib import Path
from spreado.publisher.douyin_uploader import DouYinUploader


async def upload_video():
    # åˆå§‹åŒ–ä¸Šä¼ å™¨
    uploader = DouYinUploader(
        cookie_file_path=Path("cookies/douyin_uploader/account.json")
