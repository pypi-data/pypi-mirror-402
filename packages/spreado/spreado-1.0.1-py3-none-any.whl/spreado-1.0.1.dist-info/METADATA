    # ä¸Šä¼ è§†é¢‘
    result = await uploader.upload_video_flow(
        file_path=Path("video.mp4"),
        title="æˆ‘çš„è§†é¢‘",
        content="è§†é¢‘æè¿°",
        tags=["æ ‡ç­¾1", "æ ‡ç­¾2"],
        thumbnail_path=Path("cover.png"),
    )

    if result:
        print("ä¸Šä¼ æˆåŠŸï¼")
    else:
        print("ä¸Šä¼ å¤±è´¥ï¼")


# è¿è¡Œä¸Šä¼ 
