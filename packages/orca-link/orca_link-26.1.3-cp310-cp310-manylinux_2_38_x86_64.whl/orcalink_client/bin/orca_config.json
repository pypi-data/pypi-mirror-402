{
  "server": {
    "grpc_host": "localhost",
    "grpc_port": 50351,
    "num_threads": 8,
    "max_connections": 100
  },
  "stats": {
    "enable_stats": true,
    "db_dir": "~/.orcalink/server/statistics",
    "db_name": "orca_stats.db",
    "stats_interval_seconds": 10,
    "schema_version": 1,
    "console_output": true,
    "console_detail_level": "full"
  },
  "logging": {
    "level": "INFO",
    "output": "console",
    "log_file": "/var/log/orca/server.log"
  },
  "performance": {
    "buffer_size": 1000,
    "write_batch_size": 100,
    "flush_interval_ms": 1000
  },
  "channel": {
    "max_channels_per_session": 100,
    "max_queue_size_per_channel": 10000,
    "default_mode": "explicit",
    "allow_dynamic_subscription": true,
    "overflow_policy": "drop_oldest",
    "channel_cleanup_interval_ms": 100
  },
  "session": {
    "idle_timeout_seconds": 30,
    "cleanup_check_interval_seconds": 10,
    "enable_session_cleanup": true
  }
}
