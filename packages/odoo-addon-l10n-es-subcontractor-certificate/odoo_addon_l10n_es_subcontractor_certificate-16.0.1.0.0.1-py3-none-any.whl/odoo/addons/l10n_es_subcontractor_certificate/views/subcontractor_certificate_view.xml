<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_partner_account_code_form">
        <field name="name">view.partner.account.code.form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="account.view_partner_property_form" />
        <field name="arch" type="xml">
            <xpath expr="//group[@name='fiscal_information']" position="inside">
                <field name="certificate_required" />
                <field
                    name="certificate_expiration_aeat"
                    attrs="{'invisible': [('certificate_required','=', False)]}"
                />
                <field
                    name="certificate_expiration_ss"
                    attrs="{'invisible': [('certificate_required','=', False)]}"
                />
            </xpath>
        </field>
    </record>
</odoo>
