# Include these files in the source distribution
include LICENSE
include README.md
include CHANGELOG.md
include CONTRIBUTING.md
include pyproject.toml

# Include source code
recursive-include src *.py
recursive-include src *.md
recursive-include src *.json

# Include tests (optional - remove if you don't want tests in sdist)
recursive-include tests *.py

# Exclude sensitive and development files
exclude hostname_search.json
exclude sample.json
exclude test_mistral_integration.py
exclude README.md.backup

# Exclude directories
prune backups
prune .git
prune .github
prune .hypothesis
prune .mypy_cache
prune .pytest_cache
prune .ruff_cache
prune __pycache__
prune dist
prune build
prune venv
prune examples
prune *.egg-info
