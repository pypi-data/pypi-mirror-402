<?xml version="1.0" encoding="UTF-8"?>
<object xmlns="http://textgrid.info/namespaces/metadata/core/2010"
xmlns:ns2="http://www.w3.org/1999/02/22-rdf-syntax-ns#">
    <generic>
        <provided>
            <title>{{ filename }}</title>
            <format>{{ format }}</format>
        </provided>
    </generic>
    <item>
{% for item in collectors %}
    {% if item.fullname %}
        {% if item.url %}
        <rightsHolder id="{{ item.url }}">{{ item.fullname }}</rightsHolder>
        {% else %}
        <rightsHolder>{{ item.fullname }}</rightsHolder>
        {% endif %}
    {% else %}
        <rightsHolder>TextGrid</rightsHolder>
    {% endif %}
{% endfor %}
{% if license and all([license.url, license.title]) %}
        <license licenseUri="{{ license.url }}">{{ license.title }}</license>
{% endif %}
    </item>
</object>
