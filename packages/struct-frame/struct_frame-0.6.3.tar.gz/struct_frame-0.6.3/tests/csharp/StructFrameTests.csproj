<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <OutputType>Exe</OutputType>
    <Nullable>disable</Nullable>
    <ImplicitUsings>disable</ImplicitUsings>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    <StartupObject>TestRunner</StartupObject>
    <EnableDefaultCompileItems>false</EnableDefaultCompileItems>
  </PropertyGroup>

  <ItemGroup>
    <!-- Test infrastructure -->
    <Compile Include="include\TestCodec.cs" />
    <Compile Include="include\StandardTestData.cs" />
    <Compile Include="include\ExtendedTestData.cs" />
    <Compile Include="include\VariableFlagTestData.cs" />
    
    <!-- Test entry points -->
    <Compile Include="TestRunner.cs" />
    <Compile Include="test_standard.cs" />
    <Compile Include="test_extended.cs" />
    <Compile Include="test_variable_flag.cs" />
    
    <!-- Generated struct files (exclude SDK and .sdk.cs files - SDK is generated but not used in tests) -->
    <Compile Include="..\generated\csharp\*.cs" Exclude="..\generated\csharp\*.sdk.cs" Link="Generated\%(Filename)%(Extension)" />
    <Compile Include="..\generated\csharp\FrameHeaders\*.cs" Link="Generated\FrameHeaders\%(Filename)%(Extension)" />
    <Compile Include="..\generated\csharp\PayloadTypes\*.cs" Link="Generated\PayloadTypes\%(Filename)%(Extension)" />
  </ItemGroup>
</Project>
