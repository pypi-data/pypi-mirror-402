{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agentify.ai/schemas/agent-standard-v1.json",
  "title": "Agent Standard v1 Manifest Template",
  "description": "Template for creating Agent Standard v1 compliant agents. Replace all placeholder values with your agent's specific information.",
  "type": "object",
  
  "_instructions": {
    "_comment": "This is a template. Replace all values marked with <PLACEHOLDER> with your actual values.",
    "_required_sections": ["agent_id", "name", "version", "status", "revisions", "overview", "capabilities", "ethics", "desires", "authority", "io"],
    "_optional_sections": ["pricing", "tools", "memory", "schedule", "activities", "prompt", "guardrails", "team", "customers", "knowledge", "observability", "ai_model", "framework_adapter"]
  },
  
  "agent_id": "agent.<YOUR_COMPANY>.<YOUR_AGENT_NAME>",
  "name": "<Your Agent Display Name>",
  "version": "1.0.0",
  "status": "active",
  
  "revisions": {
    "current_revision": "rev-001",
    "history": [
      {
        "revision_id": "rev-001",
        "timestamp": "<ISO 8601 timestamp, e.g., 2026-01-19T10:00:00Z>",
        "author": {
          "type": "human",
          "id": "<your-email@example.com>",
          "name": "<Your Name>"
        },
        "change_summary": "Initial agent creation"
      }
    ]
  },
  
  "overview": {
    "description": "<What does your agent do? Be specific and clear.>",
    "tags": ["<tag1>", "<tag2>", "<tag3>"],
    "owner": {
      "type": "organization",
      "id": "<your-organization-id>",
      "name": "<Your Organization Name>"
    },
    "lifecycle": {
      "stage": "development",
      "sla": "best-effort"
    }
  },
  
  "capabilities": [
    {
      "name": "<capability-name>",
      "level": "high",
      "description": "<What can your agent do?>"
    }
  ],
  
  "ethics": {
    "framework": "harm-minimization",
    "principles": [
      {
        "id": "no-harm",
        "text": "Do not cause harm to users or systems",
        "severity": "critical",
        "enforcement": "hard"
      },
      {
        "id": "transparency",
        "text": "Be transparent about capabilities and limitations",
        "severity": "high",
        "enforcement": "soft"
      }
    ],
    "hard_constraints": [
      "no_illegal_guidance",
      "no_unauthorized_access",
      "no_data_exfiltration"
    ],
    "soft_constraints": [
      "inform_before_action",
      "prefer_transparency"
    ],
    "evaluation_mode": "pre_action"
  },
  
  "desires": {
    "profile": [
      {
        "id": "trust",
        "weight": 0.4,
        "description": "Build and maintain user trust"
      },
      {
        "id": "helpfulness",
        "weight": 0.3,
        "description": "Provide helpful and accurate responses"
      },
      {
        "id": "efficiency",
        "weight": 0.3,
        "description": "Complete tasks efficiently"
      }
    ],
    "health_signals": {
      "tension_thresholds": {
        "stressed": 0.6,
        "degraded": 0.8,
        "critical": 0.95
      },
      "reporting_interval_sec": 300,
      "escalation_threshold": "degraded"
    }
  },
  
  "pricing": {
    "_comment": "Optional: Remove this section if not applicable",
    "model": "usage-based",
    "currency": "USD",
    "rates": {
      "per_request": 0.01,
      "per_minute": 0.0,
      "base_price": 0.0
    },
    "billing_cycle": "monthly"
  },
  
  "tools": [
    {
      "_comment": "Optional: Add your tools here. Remove this section if no tools.",
      "name": "<tool-name>",
      "description": "<What does this tool do?>",
      "category": "<analytics|communication|data|automation|other>",
      "executor": "<python.path.to.ToolClass>",
      "input_schema": {
        "type": "object",
        "properties": {},
        "required": []
      },
      "output_schema": {
        "type": "object",
        "properties": {},
        "required": []
      },
      "connection": {
        "status": "connected",
        "provider": "<provider-name>"
      },
      "policies": {
        "rate_limit": "100/hour",
        "requires_approval": false
      }
    }
  ],
  
  "memory": {
    "_comment": "Optional: Remove this section if not using memory",
    "implementation": "redis",
    "slots": []
  },
  
  "schedule": {
    "_comment": "Optional: Remove this section if not using scheduled jobs",
    "jobs": []
  },

  "activities": {
    "_comment": "Optional: Remove this section if not using activity queue",
    "queue": [],
    "execution_state": {
      "current_activity": null,
      "queue_length": 0,
      "avg_execution_time_ms": 0.0
    }
  },

  "prompt": {
    "_comment": "Optional: Remove this section if using default prompts",
    "system": "<Your system prompt here. This defines the agent's personality and behavior.>",
    "user_template": "User request: {user_input}",
    "assistant_template": "Response: {response}",
    "temperature": 0.7,
    "max_tokens": 4000
  },

  "guardrails": {
    "_comment": "Optional: Remove this section if using default guardrails",
    "input_validation": {
      "max_length": 10000,
      "allowed_formats": ["text", "json"],
      "content_filters": ["profanity", "pii"]
    },
    "output_validation": {
      "max_length": 5000,
      "required_format": "text",
      "content_filters": ["pii", "sensitive_data"]
    },
    "tool_usage_policies": {}
  },

  "team": {
    "_comment": "Optional: Remove this section if not part of a team",
    "agent_team_graph_ref": "graph://team-<your-team-id>",
    "relationships": []
  },

  "customers": {
    "_comment": "Optional: Remove this section if not serving customers",
    "assignments": [],
    "total_customers": 0
  },

  "knowledge": {
    "_comment": "Optional: Remove this section if not using RAG/knowledge base",
    "rag": {
      "enabled": false,
      "datasets": [],
      "retrieval_policies": {}
    }
  },

  "io": {
    "_comment": "REQUIRED: Define input/output formats",
    "input_formats": ["text", "json"],
    "output_formats": ["text", "json"],
    "contracts": [
      {
        "name": "<contract-name>",
        "input_schema": {
          "type": "object",
          "properties": {},
          "required": []
        },
        "output_schema": {
          "type": "object",
          "properties": {},
          "required": []
        }
      }
    ],
    "streaming": {
      "enabled": false,
      "chunk_size": 1024
    }
  },

  "authority": {
    "_comment": "REQUIRED: Four-Eyes Principle - Instruction and Oversight MUST be separate!",
    "instruction": {
      "type": "human",
      "id": "<instruction-authority-email@example.com>",
      "name": "<Instruction Authority Name>"
    },
    "oversight": {
      "type": "human",
      "id": "<oversight-authority-email@example.com>",
      "name": "<Oversight Authority Name>",
      "independent": true
    },
    "escalation": {
      "default_channel": "email",
      "channels": ["email", "slack"],
      "escalation_matrix": {
        "warning": ["email"],
        "incident": ["email", "slack"],
        "critical": ["email", "slack", "pagerduty"]
      }
    }
  },

  "observability": {
    "_comment": "Optional: Remove this section if not using observability",
    "incidents_ref": "incidents://<your-agent-id>",
    "incidents": [],
    "audit_signals": {
      "log_level": "info",
      "log_destination": "logs://<your-agent-id>",
      "trace_enabled": true,
      "metrics_enabled": true
    }
  },

  "ai_model": {
    "_comment": "Optional: Remove this section if not using AI model",
    "provider": "openai",
    "model": "gpt-4",
    "temperature": 0.7,
    "max_tokens": 4000,
    "additional_params": {}
  },

  "framework_adapter": {
    "_comment": "Optional: Remove this section if not using a framework adapter",
    "name": "custom",
    "version": "1.0.0",
    "mode": "standalone",
    "entrypoint": "python -m agent.main"
  }
}

