# Include documentation
include README.md
include LICENSE
include CHANGELOG.md

# Include agent standard documentation
recursive-include core/agent_standard *.md
recursive-include platform/agentify *.md

# Include templates and examples
recursive-include core/agent_standard/templates *.json
recursive-include core/agent_standard/examples *.json
recursive-include core/agent_standard/schemas *.json

# Include type stubs
recursive-include core *.pyi
recursive-include platform *.pyi

# Exclude tests and development files
recursive-exclude tests *
recursive-exclude * __pycache__
recursive-exclude * *.py[co]
recursive-exclude * .DS_Store
recursive-exclude * .git*

