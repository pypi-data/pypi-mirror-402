<div class="container-fluid py-4">
  <div class="row justify-content-center">
    <div class="col">
      <div class="{{ widget.card_class or 'card' }}">
        <div class="card-header">
          <h3 class="card-title">{{ widget.title or 'Workers' }}</h3>
        </div>
        <div class="card-body p-0">
          {% if widget.data %}
          <div class="table-responsive">
            <table id="{{ widget.table_id or 'workers-table' }}" class="{{ widget.table_class or 'table table-vcenter' }}">
              <thead>
                <tr>
                  {% for f in widget.use_fields %}
                    <th>{{ widget.use_headers.get(f, f) }}</th>
                  {% endfor %}
                </tr>
              </thead>
              <tbody>
                {% for row in widget.data %}
                  <tr>
                    {% for f in widget.use_fields %}
                      {% set val = row.get(f) %}
                      <td>
                        {% if f == 'details' %}
                          {% set base_id = (row.worker_id or (row.host ~ '-' ~ row.pid)) | string %}
                          {% set dlg_id = (row.dialog_id or ('wkdlg-' ~ base_id|replace(' ', '-')|replace('.', '-')|replace(':', '-')|replace('@', '-')|replace('/', '-'))) if row is mapping else ('wkdlg-' ~ loop.index) %}
                          <button type="button" class="btn btn-outline-primary btn-sm"
                                  onclick="(function(m){ if(m){ m.style.display='block'; m.setAttribute('aria-hidden','false'); m.querySelector('[data-modal-content]')?.focus(); } })(document.getElementById('{{ dlg_id }}'))"
                                  aria-label="Show worker details">Info</button>
                          <div id="{{ dlg_id }}" class="modal modal-blur" style="display:none;" role="dialog" aria-hidden="true" tabindex="-1" onclick="if(event.target===this){ this.style.display='none'; this.setAttribute('aria-hidden','true'); }" onkeydown="if(event.key==='Escape'){ this.style.display='none'; this.setAttribute('aria-hidden','true'); }">
                            <div class="modal-dialog modal-lg" role="document">
                              <div class="modal-content" data-modal-content tabindex="0">
                                <div class="modal-header">
                                  <h5 class="modal-title">Worker {{ row.worker_id or 'Unknown' }} details</h5>
                                  <button type="button" class="btn-close" aria-label="Close"
                                          onclick="(function(m){ if(m){ m.style.display='none'; m.setAttribute('aria-hidden','true'); } })(this.closest('.modal'))"></button>
                                </div>
                                <div class="modal-body" style="max-height:70vh; overflow:auto;">
                                  <div class="row g-3 mb-3">
                                    <div class="col-sm-6"><div><strong>Worker ID:</strong> {{ row.worker_id }}</div></div>
                                    <div class="col-sm-6"><div><strong>Role:</strong> {{ row.role }}</div></div>
                                    <div class="col-sm-6"><div><strong>Host:</strong> {{ row.host }}</div></div>
                                    <div class="col-sm-6"><div><strong>PID:</strong> {{ row.pid }}</div></div>
                                    <div class="col-sm-6"><div><strong>Capacity:</strong> {{ row.capacity }}</div></div>
                                    <div class="col-sm-6"><div><strong>Running:</strong> {{ row.running }}</div></div>
                                    <div class="col-sm-6"><div><strong>Status:</strong>
                                      {% set is_stale = row.stale in [True, 'true', 'True', 1, '1'] %}
                                      <span class="badge {{ 'bg-red' if is_stale else 'bg-green' }}">{{ 'Stale' if is_stale else 'OK' }}</span>
                                    </div></div>
                                    <div class="col-12">
                                      <div><strong>Topics:</strong>
                                        {% if row.topics is sequence and row.topics is not string %}
                                          {% for it in row.topics %}<span class="badge bg-blue-lt me-1">{{ it }}</span>{% endfor %}
                                        {% else %}
                                          {{ row.topics }}
                                        {% endif %}
                                      </div>
                                    </div>
                                    <div class="col-sm-6"><div><strong>Last heartbeat:</strong> {{ row.last_heartbeat }}</div></div>

                                    {# Display running tasks #}
                                    {% if row.tasks %}
                                      <div class="col-12 mt-2">
                                        <div><strong>Running tasks:</strong></div>
                                        <div class="list-group list-group-flush mt-1">
                                          {% for t in row.tasks %}
                                            <div class="list-group-item py-1 px-0">
                                              <span class="status-dot status-green me-2"></span>
                                              {{ t }}
                                            </div>
                                          {% endfor %}
                                        </div>
                                      </div>
                                    {% endif %}

                                    {# System usage from heartbeat meta (cpu/memory) #}
                                    {% set _meta = row.get('meta') if row is mapping else None %}
                                    {% set _sys = (_meta.get('system') if _meta else None) %}
                                    {% if _sys %}
                                      {% set cpu = _sys.get('cpu_pct') %}
                                      {% set mem = _sys.get('mem_pct') %}
                                      <div class="col-12 mt-2">
                                        <div class="row g-2">
                                          <div class="col-sm-6">
                                            <div><strong>CPU usage:</strong>
                                              {% if cpu is not none %}
                                                {% set cpu_val = (cpu | float) %}
                                                {% set cpu_cls = 'bg-green' if cpu_val <= 50 else ('bg-yellow' if cpu_val <= 80 else 'bg-red') %}
                                                <span class="badge {{ cpu_cls }} ms-1">{{ '%.1f' % cpu_val }}%</span>
                                                <div style="height:6px; background:#e9ecef; border-radius:3px; margin-top:6px;">
                                                  <div style="height:6px; width: {{ '%.1f' % cpu_val }}%; background:#206bc4; border-radius:3px;"></div>
                                                </div>
                                              {% else %}
                                                <span class="text-muted">N/A</span>
                                              {% endif %}
                                            </div>
                                          </div>
                                          <div class="col-sm-6">
                                            <div><strong>Memory usage:</strong>
                                              {% if mem is not none %}
                                                {% set mem_val = (mem | float) %}
                                                {% set mem_cls = 'bg-green' if mem_val <= 50 else ('bg-yellow' if mem_val <= 80 else 'bg-red') %}
                                                <span class="badge {{ mem_cls }} ms-1">{{ '%.1f' % mem_val }}%</span>
                                                <div style="height:6px; background:#e9ecef; border-radius:3px; margin-top:6px;">
                                                  <div style="height:6px; width: {{ '%.1f' % mem_val }}%; background:#2fb344; border-radius:3px;"></div>
                                                </div>
                                              {% else %}
                                                <span class="text-muted">N/A</span>
                                              {% endif %}
                                            </div>
                                          </div>
                                        </div>
                                      </div>
                                    {% endif %}
                                  </div>
                                  <button type="button" class="btn btn-sm" onclick="var p=this.nextElementSibling; if(p){ p.style.display = (p.style.display==='none' || !p.style.display) ? 'block' : 'none'; }">Toggle raw JSON</button>
                                  <pre class="code mt-2" style="display:none;">{{ row | tojson(indent=2) }}</pre>
                                </div>
                                <div class="modal-footer">
                                  <button type="button" class="btn"
                                          onclick="(function(m){ if(m){ m.style.display='none'; m.setAttribute('aria-hidden','true'); } })(this.closest('.modal'))">Close</button>
                                </div>
                              </div>
                            </div>
                          </div>
                        {% elif f == 'last_seen_min' %}
                          {{ (val | safe) if val is string else (val | string) }}
                        {% elif f == 'stale' %}
                          {% set is_stale = val in [True, 'true', 'True', 1, '1'] %}
                          <span class="badge {{ 'bg-red' if is_stale else 'bg-green' }}">{{ 'Stale' if is_stale else 'OK' }}</span>
                        {% elif val is mapping %}
                          <pre class="code">{{ val | tojson(indent=2) }}</pre>
                        {% elif val is sequence and val is not string %}
                          <span>
                            {% for it in val %}
                              <span class="badge bg-blue-lt me-1">{{ it }}</span>
                            {% endfor %}
                          </span>
                        {% else %}
                          {{ val }}
                        {% endif %}
                      </td>
                    {% endfor %}
                  </tr>
                {% endfor %}
              </tbody>
            </table>
          </div>
          {% else %}
            <div class="empty">
              <div class="empty-icon">
                <svg xmlns="http://www.w3.org/2000/svg" class="icon" width="24" height="24" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" fill="none" stroke-linecap="round" stroke-linejoin="round"><path stroke="none" d="M0 0h24v24H0z" fill="none"/><rect x="4" y="3" width="16" height="18" rx="2"/><line x1="8" y1="7" x2="16" y2="7" /><line x1="8" y1="11" x2="16" y2="11" /><line x1="8" y1="15" x2="12" y2="15" /></svg>
              </div>
              <p class="empty-title">No workers found</p>
              <p class="empty-subtitle text-muted">Workers will appear here once they register and send heartbeats.</p>
            </div>
          {% endif %}
        </div>
      </div>
    </div>
  </div>
</div>
