# 包含必要的文件
include README.md
include LICENSE
include requirements.txt
include pyproject.toml

# 递归包含 xparse_client 包下的所有 Python 文件
recursive-include xparse_client *.py

# 排除不需要的文件和目录
global-exclude __pycache__
global-exclude *.py[cod]
global-exclude *$py.class
global-exclude *.so
global-exclude .DS_Store
global-exclude *.db
global-exclude *.sqlite
global-exclude *.sqlite3
global-exclude *.lock

# 排除开发相关目录
prune intermediate_results
prune result
prune parsed_documents
prune parsed_medical_documents
prune agent_vectors
prune example
prune doc
prune dist
prune build
prune .venv
prune venv
prune env
prune __pycache__
prune *.egg-info

# 排除开发相关文件（排除除 README.md 外的其他 .md 文件）
exclude upload_*.py
exclude agent.py
exclude Makefile
exclude 1.md
exclude *.pdf
exclude .gitignore
exclude uv.lock

