{
  "widget": "metrics",
  "version": 1,
  "endpoints": {
    "current": "/api/metrics",
    "history": "/api/metrics/history",
    "csv": "/api/metrics/csv",
    "schema": "/api/metrics/schema"
  },
  "metadata": {
    "field": "source",
    "label": "Source",
    "emptyMessage": "No metrics history yet."
  },
  "axes": {
    "x": {
      "display": true,
      "title": {
        "display": true,
        "text": "Timestamp"
      },
      "grid": {
        "display": false
      }
    },
    "y": {
      "type": "linear",
      "position": "left",
      "title": {
        "display": true,
        "text": "Value"
      },
      "grid": {
        "display": true
      }
    }
  },
  "metrics": [
    {
      "field": "cpu_percent",
      "label": "CPU %",
      "unit": "%",
      "format": "number",
      "decimals": 1,
      "color": "rgb(75, 192, 192)",
      "yAxisLabel": "Percentage"
    },
    {
      "field": "memory_percent",
      "label": "Memory %",
      "unit": "%",
      "format": "number",
      "decimals": 1,
      "color": "rgb(255, 159, 64)",
      "yAxisLabel": "Percentage"
    },
    {
      "field": "load_1min",
      "label": "Load Average",
      "unit": "",
      "format": "number",
      "decimals": 2,
      "color": "rgb(153, 102, 255)",
      "yAxisLabel": "Load Average"
    },
    {
      "field": "temp_c",
      "label": "Temperature",
      "unit": "°C",
      "format": "number",
      "decimals": 1,
      "color": "rgb(255, 99, 132)",
      "yAxisLabel": "Temperature (°C)"
    },
    {
      "field": "battery_percent",
      "label": "Battery",
      "unit": "%",
      "format": "number",
      "decimals": 1,
      "color": "rgb(34, 197, 94)",
      "yAxisLabel": "Percentage"
    }
  ],
  "computed": [
    {
      "group": "disk_io",
      "label": "Disk I/O",
      "yAxisLabel": "MB/min",
      "fields": [
        {
          "field": "disk_read_rate",
          "label": "Read MB/min",
          "unit": "MB/min",
          "format": "number",
          "decimals": 1,
          "color": "rgb(54, 162, 235)",
          "source": "disk_read_mb"
        },
        {
          "field": "disk_write_rate",
          "label": "Write MB/min",
          "unit": "MB/min",
          "format": "number",
          "decimals": 1,
          "color": "rgb(255, 99, 132)",
          "source": "disk_write_mb"
        }
      ]
    },
    {
      "group": "net_io",
      "label": "Network I/O",
      "yAxisLabel": "MB/min",
      "fields": [
        {
          "field": "net_rx_rate",
          "label": "RX MB/min",
          "unit": "MB/min",
          "format": "number",
          "decimals": 1,
          "color": "rgb(75, 192, 192)",
          "source": "net_rx_mb"
        },
        {
          "field": "net_tx_rate",
          "label": "TX MB/min",
          "unit": "MB/min",
          "format": "number",
          "decimals": 1,
          "color": "rgb(255, 159, 64)",
          "source": "net_tx_mb"
        }
      ]
    }
  ]
}
