{
  "widget": "speedtest",
  "version": 1,
  "endpoints": {
    "history": "/api/speedtest/history",
    "chart": "/api/speedtest/chart",
    "csv": "/api/speedtest/csv",
    "run": "/api/speedtest/run",
    "schema": "/api/speedtest/schema"
  },
  "metadata": {
    "field": "server",
    "label": "Server",
    "fields": [
      { "field": "server", "label": "Server" },
      { "field": "ip_address", "label": "IP Address" }
    ],
    "emptyMessage": "No speedtests logged yet."
  },
  "axes": {
    "x": {
      "display": true,
      "title": {
        "display": true,
        "text": "Timestamp"
      },
      "grid": {
        "display": false
      }
    },
    "speed": {
      "type": "linear",
      "position": "left",
      "title": {
        "display": true,
        "text": "Speed (Mbps)"
      }
    },
    "ping": {
      "type": "linear",
      "position": "right",
      "title": {
        "display": true,
        "text": "Ping (ms)"
      },
      "grid": {
        "drawOnChartArea": false
      }
    }
  },
  "chart": {
    "tension": 0.1,
    "backgroundAlpha": 0.1,
    "default_metric_label": "All",
    "status_template": "{timestamp} — ↓ {download}, ↑ {upload}, {ping} ({server})"
  },
  "metrics": [
    {
      "field": "download",
      "label": "Download (Mbps)",
      "unit": "Mbps",
      "format": "mbps",
      "decimals": 2,
      "color": "rgb(59, 130, 246)",
      "yAxisID": "speed",
      "yAxisLabel": "Speed (Mbps)"
    },
    {
      "field": "upload",
      "label": "Upload (Mbps)",
      "unit": "Mbps",
      "format": "mbps",
      "decimals": 2,
      "color": "rgb(239, 68, 68)",
      "yAxisID": "speed",
      "yAxisLabel": "Speed (Mbps)"
    },
    {
      "field": "ping",
      "label": "Ping (ms)",
      "unit": "ms",
      "format": "ping",
      "decimals": 1,
      "color": "rgb(16, 185, 129)",
      "yAxisID": "ping",
      "yAxisLabel": "Ping (ms)"
    }
  ]
}
