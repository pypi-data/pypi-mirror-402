# ECS MCP Server Environment Configuration
# Copy this file to .env and fill in the values

# Database Connection
DB_SERVER=ecs2022.ltc
DB_NAME=LT_ECS_LTCCore
DB_USER=ecs_user
DB_PASSWORD=your_password_here
DB_DRIVER=ODBC Driver 18 for SQL Server
DB_POOL_SIZE=5
DB_POOL_TIMEOUT=30
DB_QUERY_TIMEOUT=30

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=console
LOG_FILE=mcp_audit.log

# Query Limits
MAX_ROWS=1000

# Retry Settings
RETRY_MAX_ATTEMPTS=3
RETRY_DELAY_SECONDS=1.0
