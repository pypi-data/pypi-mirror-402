# DF测试框架配置示例
# 复制此文件为 .env 并修改为实际配置

# ========== 环境配置 ==========
ENV=test
DEBUG=false

# ========== HTTP配置 ==========
APP_HTTP__BASE_URL=http://localhost:8080
APP_HTTP__TIMEOUT=30
APP_HTTP__MAX_RETRIES=3
APP_HTTP__VERIFY_SSL=true
APP_HTTP__MAX_CONNECTIONS=50

# ========== 数据库配置 ==========
# 连接字符串格式: mysql+pymysql://user:password@host:port/database?charset=utf8mb4
APP_DB__CONNECTION_STRING=mysql+pymysql://root:password@localhost:3306/test_db?charset=utf8mb4
APP_DB__POOL_SIZE=10
APP_DB__MAX_OVERFLOW=20
APP_DB__POOL_TIMEOUT=30
APP_DB__POOL_RECYCLE=3600
APP_DB__POOL_PRE_PING=true
APP_DB__ECHO=false

# ========== Redis配置 ==========
APP_REDIS__HOST=localhost
APP_REDIS__PORT=6379
APP_REDIS__DB=0
APP_REDIS__PASSWORD=
APP_REDIS__DECODE_RESPONSES=true
APP_REDIS__SOCKET_TIMEOUT=5
APP_REDIS__MAX_CONNECTIONS=50

# ========== 日志配置 ==========
APP_LOG_LEVEL=INFO
APP_LOG_FILE=
APP_LOG_FORMAT=text
APP_ENABLE_CONSOLE_LOG=true
APP_ENABLE_SANITIZE=true

# ========== 测试配置 ==========
APP_TEST__PARALLEL_WORKERS=4
APP_TEST__RETRY_TIMES=2
APP_TEST__TIMEOUT=300

# ========== Allure配置 ==========
APP_ALLURE__RESULTS_DIR=reports/allure-results
APP_ALLURE__REPORT_DIR=reports/allure-report
APP_ALLURE__CLEAN=false
APP_ALLURE__ATTACH_LOGS=true
