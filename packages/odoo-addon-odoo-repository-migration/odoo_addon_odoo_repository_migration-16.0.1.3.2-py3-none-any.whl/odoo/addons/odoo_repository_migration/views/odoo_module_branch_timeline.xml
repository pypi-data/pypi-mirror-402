<odoo>

  <record id="odoo_module_branch_timeline_view_form" model="ir.ui.view">
    <field name="name">odoo.module.branch.timeline.form</field>
    <field name="model">odoo.module.branch.timeline</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <group>
            <field name="odoo_version_id" />
            <field name="module_branch_id" />
            <field name="state" />
            <field name="next_module_id" />
            <field
                            name="next_module_branch_id"
                            attrs="{'invisible': [('next_module_branch_id', '=', False)]}"
                        />
          </group>
          <group name="note" string="Notes">
            <field name="note" colspan="2" nolabel="1" />
          </group>
        </sheet>
      </form>
    </field>
  </record>

  <record id="odoo_module_branch_timeline_view_tree" model="ir.ui.view">
    <field name="name">odoo.module.branch.timeline.tree</field>
    <field name="model">odoo.module.branch.timeline</field>
    <field name="arch" type="xml">
      <tree>
        <field name="odoo_version_id" />
        <field name="module_branch_id" />
        <field name="state" />
        <field name="next_module_id" />
      </tree>
    </field>
  </record>

  <record id="odoo_module_branch_timeline_view_search" model="ir.ui.view">
    <field name="name">odoo.module.branch.timeline.search</field>
    <field name="model">odoo.module.branch.timeline</field>
    <field name="type">search</field>
    <field name="arch" type="xml">
      <search>
        <field name="odoo_version_id" />
        <field name="module_branch_id" />
        <field name="org_id" />
        <field name="repository_id" />
        <field name="state" />
        <field name="next_module_id" />
        <filter name="renamed" string="Renamed" domain="[('state', '=', 'renamed')]" />
        <filter
                    name="replaced"
                    string="Replaced"
                    domain="[('state', '=', 'replaced')]"
                />
        <group expand="0" string="Group By">
          <filter
                        name="group_by_org_id"
                        string="Organization"
                        context="{'group_by': 'org_id'}"
                    />
          <filter
                        name="group_by_repository_id"
                        string="Repository"
                        context="{'group_by': 'repository_id'}"
                    />
          <filter
                        name="group_by_odoo_version_id"
                        string="Odoo Version"
                        context="{'group_by': 'odoo_version_id'}"
                    />
          <filter
                        name="group_by_state"
                        string="State"
                        context="{'group_by': 'state'}"
                    />
        </group>
      </search>
    </field>
  </record>

  <record id="odoo_module_branch_timeline_action" model="ir.actions.act_window">
    <field name="name">Timelines</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">odoo.module.branch.timeline</field>
    <field name="view_id" ref="odoo_module_branch_timeline_view_tree" />
    <field name="context">{'search_default_group_by_org_id': 1}</field>
  </record>

  <menuitem
        id="odoo_module_branch_timeline_menu"
        parent="odoo_repository.modules_odoo_repository_menu"
        action="odoo_module_branch_timeline_action"
        sequence="20"
    />

</odoo>
