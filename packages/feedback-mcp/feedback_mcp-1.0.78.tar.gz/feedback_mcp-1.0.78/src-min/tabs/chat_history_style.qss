/* Chat History Tab Modern Styles */

/* Global Scroll Area */
QScrollArea {
    border: none;
    background-color: #1e1e1e;
}

QWidget#messagesContainer {
    background-color: #1e1e1e;
}

/* -------------------------------------------------------------------------
   Bubbles
   ------------------------------------------------------------------------- */
QFrame {
    border: none;
}

QFrame#userBubble {
    background-color: #0e639c; /* Blue */
    border-radius: 12px;
    border-top-right-radius: 2px;
}

QFrame#aiBubble {
    background-color: #252526; /* Dark Gray */
    border: 1px solid #454545;
    border-radius: 12px;
}

QFrame#agentBubble {
    background-color: #2d2b38; /* Slight Purple/Dark */
    border: 1px solid #453555;
    border-radius: 12px;
    border-top-left-radius: 2px;
}

/* -------------------------------------------------------------------------
   Avatars
   ------------------------------------------------------------------------- */
QLabel#avatarLabel {
    font-size: 18px;
    background-color: transparent;
    padding: 4px;
}

/* -------------------------------------------------------------------------
   Role Labels
   ------------------------------------------------------------------------- */
QLabel#roleLabel {
    font-size: 11px;
    font-weight: bold;
    color: #cccccc;
    margin-bottom: 2px;
}

/* -------------------------------------------------------------------------
   Empty State
   ------------------------------------------------------------------------- */
QLabel#emptyStateLabel {
    color: #6e6e6e;
    font-size: 14px;
    padding: 40px;
}