<odoo>

  <record id="odoo_project_import_modules_view_form" model="ir.ui.view">
    <field name="name">odoo.project.import.modules.form</field>
    <field name="model">odoo.project.import.modules</field>
    <field name="arch" type="xml">
      <form>
        <sheet>
          <field name="odoo_project_id" invisible="1" />
          <field name="odoo_version_id" invisible="1" />
          <notebook>
            <page name="additional_modules" string="Additional modules">
              <div
                                class="alert alert-info"
                                role="alert"
                            >Build your project by adding modules. This can help to get some figures before a launch to estimate maintenance cost for instance.</div>
              <field name="additional_module_ids" />
            </page>
            <page name="init_modules_list" string="Initialize from modules list">
              <div
                                class="alert alert-warning"
                                role="alert"
                            >Initialize the list of modules that are installed in your project. This will wipe the current installed modules.<br
                                />The list can be copied-pasted from columns 'Technical Name' and 'Latest Version' put side by side from a standard Odoo export of modules installed.</div>
              <field
                                name="modules_list"
                                placeholder="# One module per line with an optional version number (separated by any special character like space, tabulation, comma...). E.g:&#10;sale&#10;server_environment 17.0.1.1.0"
                            />
            </page>
          </notebook>
          <group>
            <field name="import_missing_dependencies" />
          </group>
        </sheet>
        <footer>
          <button
                        string="Import"
                        name="action_import"
                        type="object"
                        class="btn-primary"
                    />
          <button string="Cancel" class="btn btn-default" special="cancel" />
        </footer>
      </form>
    </field>
  </record>

  <record id="odoo_project_import_modules_action" model="ir.actions.act_window">
    <field name="name">Import Project Modules</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">odoo.project.import.modules</field>
    <field name="view_mode">form</field>
    <field name="target">new</field>
  </record>

</odoo>
