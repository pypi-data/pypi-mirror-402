<odoo>

  <record id="odoo_repository_view_form" model="ir.ui.view">
    <field name="name">odoo.repository.form.inherit</field>
    <field name="model">odoo.repository</field>
    <field name="inherit_id" ref="odoo_repository.odoo_repository_view_form" />
    <field name="arch" type="xml">
      <div name="button_box" position="inside">
        <button
                    name="action_view_projects"
                    type="object"
                    class="oe_stat_button"
                    icon="fa-puzzle-piece"
                    attrs="{'invisible': [('project_count', '=', 0)]}"
                >
            <field name="project_count" widget="statinfo" string="Projects" />
        </button>
      </div>
    </field>
  </record>

</odoo>
