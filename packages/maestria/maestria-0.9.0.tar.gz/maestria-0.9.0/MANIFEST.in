include README.md
include LICENSE
include pyproject.toml

# Include scripts and templates
recursive-include maestria/scripts *
recursive-include maestria/templates *.py *.toml *.txt *.md *.cfg *.ini

# Exclude cache and compiled files everywhere
global-exclude __pycache__
global-exclude *.pyc
global-exclude *.pyo
global-exclude .DS_Store
recursive-exclude maestria __pycache__
recursive-exclude maestria *.pyc
recursive-exclude maestria *.pyo