# Include essential documentation
include README.md
include LICENSE.md
include CHANGELOG.md

# Include FatFS source code (required for compilation)
recursive-include foreign/fatfs/source *.c *.h

# Include Cython source files
include fatfs/*.pyx
include fatfs/*.pxd
include fatfs/diskiocheck.c

# Include Python source files
include fatfs/*.py

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.so
global-exclude *.dll
global-exclude *.dylib
global-exclude __pycache__
global-exclude .DS_Store
global-exclude *.swp
global-exclude *~

# Exclude build artifacts
prune build
prune dist
prune *.egg-info
prune test_venv
prune .git
prune .github

# Exclude development/documentation files
exclude FORK_INFO.md
exclude FORK_COMPLETE.md
exclude README_FORK.md
exclude PYPI_RELEASE.md
exclude PYPI_TRUSTED_PUBLISHER_SETUP.md
exclude DEPLOYMENT_CHANGES.md
exclude FATFS_R016_COMPATIBILITY.md
exclude EXTENDED_FEATURES.md
exclude Makefile
exclude tox.ini
exclude run_check.py
exclude .gitignore
exclude .gitmodules

# Exclude test files
prune tests
