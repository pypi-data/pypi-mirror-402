<div id="elia">
  <div class="elhuyar-notranslate elhuyar-translate-destination-wrapper">
    <div class="elhuyar-translate-destination-group">
      <div>
        <button class="elhuyar"
                id="elhuyar-translate-destination"
                tal:repeat="lang view/language_options"
                tal:content="lang"
                tal:attributes="
                  onClick string:elhuyarTranslate('${view/selector}', '${lang}');
                  id string:elhuyar-translate-${lang};
                "
        ></button>
      </div>
      <a class="elhuyar-logo"
         href="https://elia.eus/"
         target="_blank"
         title="automatic translator"
         i18n:attributes="title"
      ><img alt="Logo of the automatic translator"
             src="/++plone++cs.translator.elhuyar/elia_RGB.webp"
             i18n:attributes="alt"
        /></a>
    </div>
    <p class="elhuyar-description"
       i18n:translate=""
    >Machine translation</p>
  </div>
</div>
