    <script>
        // Fetch stats from Grafana/Prometheus API (optional)
        async function fetchStats() {
            try {
                const resp = await fetch('/grafana/api/datasources/proxy/1/api/v1/query?query=count(nvidia_gpu_temperature_gpu)');
                const data = await resp.json();
                if (data.data?.result?.[0]?.value?.[1]) {
                    document.getElementById('gpu-count').textContent = data.data.result[0].value[1];
                }
            } catch (e) {
                // Stats unavailable
            }
        }
        fetchStats();
