# Include essential files
include LICENSE
include README.md
include CHANGELOG.md
include pyproject.toml

# Include all source files
recursive-include src/mbm *.py

# Include data files
recursive-include src/mbm/assets *
recursive-include src/mbm/data *

# Include examples
recursive-include examples *.ar

# Include tests
recursive-include tests *.py

# Exclude compiled files
global-exclude *.pyc
global-exclude *.pyo
global-exclude __pycache__
global-exclude *.so
global-exclude .DS_Store
global-exclude *.egg-info
