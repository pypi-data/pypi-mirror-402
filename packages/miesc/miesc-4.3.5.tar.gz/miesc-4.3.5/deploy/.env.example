# MIESC Environment Variables
# Copy this file to .env and fill in the values

# Environment mode
MIESC_ENV=production

# Database URL
# For production with PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:5432/miesc
# For development with SQLite:
DATABASE_URL=sqlite:///data/licenses.db

# License Admin API Key (generate a secure random string)
MIESC_ADMIN_API_KEY=your-secure-api-key-here

# AWS Configuration (for ECS deployment)
AWS_REGION=us-east-1
AWS_ACCOUNT_ID=123456789012
ECR_REPO_URI=123456789012.dkr.ecr.us-east-1.amazonaws.com/miesc

# EFS Configuration (for persistent storage)
EFS_FILE_SYSTEM_ID=fs-xxxxxxxxx

# Optional: External LLM API Keys (if using AI features)
# OPENAI_API_KEY=sk-xxxxx
# ANTHROPIC_API_KEY=sk-ant-xxxxx

# Optional: Certora Key (for formal verification)
# CERTORAKEY=your-certora-key

# Logging level
LOG_LEVEL=INFO
