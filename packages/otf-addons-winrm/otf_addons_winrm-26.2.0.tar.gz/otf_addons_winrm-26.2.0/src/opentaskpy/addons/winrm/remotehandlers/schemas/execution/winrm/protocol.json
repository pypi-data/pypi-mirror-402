{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "const": "opentaskpy.addons.winrm.remotehandlers.winrm.WinRMExecution"
    },
    "server_cert_validation": {
      "type": "string",
      "enum": ["validate", "ignore"],
      "default": "validate",
      "description": "Whether to validate the server certificate. Use 'ignore' for self-signed certificates"
    },
    "credentials": {
      "type": "object",
      "properties": {
        "username": {
          "type": "string",
          "description": "Username for WinRM authentication"
        },
        "password": {
          "type": "string",
          "description": "Password for NTLM/Basic authentication"
        },
        "transport": {
          "type": "string",
          "enum": ["ntlm", "basic", "ssl", "certificate"],
          "description": "Authentication transport method"
        },
        "port": {
          "type": "integer",
          "default": 5986,
          "description": "WinRM port (5986 for HTTPS, 5985 for HTTP)"
        },
        "cert_pem": {
          "type": "string",
          "description": "Client certificate in PEM format (for certificate authentication)"
        },
        "cert_key_pem": {
          "type": "string",
          "description": "Client certificate private key in PEM format (for certificate authentication)"
        }
      },
      "required": ["username", "transport"],
      "allOf": [
        {
          "if": {
            "properties": {
              "transport": {
                "enum": ["ntlm", "basic", "ssl"]
              }
            }
          },
          "then": {
            "required": ["password"]
          }
        },
        {
          "if": {
            "properties": {
              "transport": {
                "const": "certificate"
              }
            }
          },
          "then": {
            "required": ["cert_pem", "cert_key_pem"]
          }
        }
      ]
    }
  },
  "required": ["name", "credentials"]
}
