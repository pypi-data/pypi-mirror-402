{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "execution"
    },
    "hostname": {
      "type": "string",
      "description": "Hostname or IP address of the Windows machine"
    },
    "directory": {
      "type": "string",
      "description": "Working directory for command execution",
      "default": "."
    },
    "command": {
      "type": "string",
      "description": "PowerShell command or script to execute"
    },
    "protocol": {
      "$ref": "protocol.json"
    }
  },
  "required": ["type", "hostname", "command", "protocol"]
}
