{% extends "aws/base_resource.tf.j2" %}
{% block resources %}
{% for dashboard in resources %}
{{ resource_spacer() }}
resource "aws_cloudwatch_dashboard" "{{ dashboard.name_sanitized }}" {
  dashboard_name = "{{ dashboard.DashboardName }}"
  dashboard_body = jsonencode({{ dashboard.DashboardBody | safe }})
}

{% endfor %}
{% endblock %}
