{% extends "gcp/base_resource.tf.j2" %}
{% block resources %}
{% for np in resources %}
{{ resource_spacer() }}
resource "google_container_node_pool" "{{ np.name_sanitized }}" {
  name       = "{{ np.name }}"
  cluster    = "{{ np.cluster }}"
  location   = "{{ np.location }}"

  lifecycle {
    prevent_destroy = true
  }
}

{% endfor %}
{% endblock %}
