{% import "gcp/macros.j2" as gcp_macros %}
{% import "common/macros.j2" as common_macros %}
{# Joiner for consistent blank lines between rendered resources #}
{% set resource_spacer = joiner('\n\n') %}

{# Base template for GCP resources #}

{# Macro to render labels for a GCP resource #}
{% macro render_gcp_tags(resource, indent=2) %}
{{ gcp_macros.render_gcp_labels(resource, indent) }}
{% endmacro %}

{# Alias for compatibility with common base template #}
{% macro render_common_tags(resource, indent=2) %}
{{ render_gcp_tags(resource, indent) }}
{% endmacro %}

{# Block that child templates override to emit resource definitions #}
{% block resources %}{% endblock %}
