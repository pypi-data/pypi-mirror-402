{% import "azure/macros.j2" as azure_macros %}
{% import "common/macros.j2" as common_macros %}
{# Joiner for consistent blank lines between rendered resources #}
{% set resource_spacer = joiner('\n\n') %}

{# Base template for Azure resources #}

{# Macro to render tags for an Azure resource #}
{% macro render_common_tags(resource, indent=2) %}
{{ azure_macros.render_azure_tags(resource, indent) }}
{% endmacro %}

{# Alias for Azure-specific tag rendering #}
{% macro render_azure_tags(resource, indent=2) %}
{{ azure_macros.render_azure_tags(resource, indent) }}
{% endmacro %}

{# Convenience macro for render_tags compatibility #}
{% macro render_tags(tags, indent=2) %}
{{ azure_macros.render_tags(tags, indent) }}
{% endmacro %}

{# Block that child templates override to emit resource definitions #}
{% block resources %}{% endblock %}
