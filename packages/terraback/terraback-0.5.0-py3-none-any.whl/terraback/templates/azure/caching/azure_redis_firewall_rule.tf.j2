{% extends "common/base_resource.tf.j2" %}

{% block resources %}
{% for resource in resources %}
{{ resource_spacer() }}
resource "azurerm_redis_firewall_rule" "{{ resource.name }}" {
  name                = "{{ resource.properties.name }}"
  redis_cache_name    = "{{ resource.properties.redis_cache_name }}"
  resource_group_name = "{{ resource.properties.resource_group_name }}"
  start_ip            = "{{ resource.properties.start_ip }}"
  end_ip              = "{{ resource.properties.end_ip }}"
}

{% endfor %}
{% endblock %}
