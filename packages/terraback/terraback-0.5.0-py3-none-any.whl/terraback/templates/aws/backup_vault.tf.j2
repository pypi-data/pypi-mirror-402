{% extends "aws/base_resource.tf.j2" %}
{% block resources %}
{% for vault in resources %}
{{ resource_spacer() }}
resource "aws_backup_vault" "{{ vault.name_sanitized }}" {
  name = "{{ vault.BackupVaultName }}"
  {%- if vault.get('KmsKeyArn') %}
  kms_key_arn = "{{ vault.KmsKeyArn }}"
  {%- endif %}

  {{ render_aws_tags(vault, 2) }}
}

{% endfor %}
{% endblock %}
