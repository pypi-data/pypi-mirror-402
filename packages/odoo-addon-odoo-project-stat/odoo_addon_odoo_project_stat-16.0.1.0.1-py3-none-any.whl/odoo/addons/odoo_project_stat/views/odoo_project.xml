<odoo>

  <record id="odoo_project_view_form" model="ir.ui.view">
    <field name="name">odoo.project.form.inherit</field>
    <field name="model">odoo.project</field>
    <field name="inherit_id" ref="odoo_project.odoo_project_view_form" />
    <field name="arch" type="xml">
      <page name="status" position="before">
        <page
                    name="stats"
                    string="Stats"
                    attrs="{'invisible': [('chart_modules_count', '=', False), ('chart_sloc', '=', False)]}"
                >
          <group>
            <group>
              <field name="chart_modules_count" widget="plotly_chart" nolabel="1" />
            </group>
            <group>
              <field name="chart_sloc" widget="plotly_chart" nolabel="1" />
            </group>
          </group>
          <button
                        name="action_generate_stats"
                        type="object"
                        string="Refresh"
                        class="btn-secondary"
                        groups="odoo_repository.group_odoo_repository_user"
                        help="Useful to get accurate figures if modules have been updated in their respective repositories."
                    />
        </page>
      </page>
    </field>
  </record>

</odoo>
