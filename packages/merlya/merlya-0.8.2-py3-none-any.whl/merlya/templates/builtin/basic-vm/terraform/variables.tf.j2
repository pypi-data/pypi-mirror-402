# Generated by Merlya - basic-vm template v{{ template_version }}
# Variables for {{ provider }}

{% if provider == "azure" %}
variable "resource_group_name" {
  description = "Azure resource group name"
  type        = string
}

variable "location" {
  description = "Azure region"
  type        = string
  default     = "eastus"
}

{% if not ssh_key_name %}
variable "admin_password" {
  description = "Admin password for the VM"
  type        = string
  sensitive   = true
}
{% endif %}

{% if not subnet_id %}
variable "subnet_id" {
  description = "Subnet ID for the network interface"
  type        = string
}
{% endif %}
{% endif %}
