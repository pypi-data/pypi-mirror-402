# Include build system files
include Makefile
include setup.py
include pyproject.toml
include README.md
include INSTALL.md
include requirements.txt
include requirements-dev.txt

# Include Fortran source files (now inside package)
recursive-include src/pytem1d/fortran *.for
recursive-include src/pytem1d/fortran *.FOR
recursive-include src/pytem1d/fortran *.INC
recursive-include src/pytem1d/fortran *.inc

# Include compiled libraries (for binary distributions)
include src/pytem1d/lib/*.so
include src/pytem1d/lib/*.dll
include src/pytem1d/lib/*.dylib

# Include examples
recursive-include examples *.py
recursive-include examples *.md
include examples/.gitignore

# Include tests
recursive-include tests *.py

# Exclude compiled Python files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store

# Exclude generated outputs
global-exclude *.png
global-exclude *.npz
global-exclude *.log
