# Include only necessary documentation
include README.md
include LICENSE

# Include type hints
include asmagic/py.typed

# Include proto files
recursive-include asmagic/proto *.py

# Exclude unnecessary files
global-exclude __pycache__
global-exclude *.py[co]
global-exclude .DS_Store
exclude *.egg-info

# Exclude tutorial and guide files (not needed in package)
exclude 新手上传PyPI教程.md
exclude 超简单上传命令.md
exclude 依赖说明.md
exclude PUBLISH_TO_PYPI.md
exclude QUICK_PUBLISH.md
exclude README_PUBLISH.md
exclude HIGH_FPS_GUIDE.md
exclude IDE_SETUP.md
exclude IMAGE_DISPLAY_GUIDE.md
exclude SIMPLE_API_GUIDE.md
exclude TYPE_HINTS_DEMO.md
exclude USAGE_SIMPLE.md
exclude publish.sh
exclude test_type_hints.py

# Exclude examples directory (users can see them on GitHub)
recursive-exclude examples *

