    color: #[foreground];
}

QTableView:item:hover {
    background-color: #[highlight_dim];
    color: #[foreground];
}

QTableView:item:focus {
    background-color: #[highlight_dim];
    color: #[foreground];
}

QTableView:item:selected {
    background-color: #[highlight_dim];
    color: #[foreground];
}

QTableView:item:checked {
    background-color: #[highlight_dim];
    color: #[foreground];
}

/* ----------------- QTreeView ----------------- */
QTreeView::indicator:unchecked {
