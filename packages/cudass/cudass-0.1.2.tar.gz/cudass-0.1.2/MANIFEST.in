# Explicit includes (some may be auto-included by setuptools)
include README.md
include LICENSE
include NOTICE
include pyproject.toml
include setup.py
include cudass/cuda/bindings/cudss_bindings.pyx
include cudass/cuda/bindings/cudss_decls.h
include cudass/cuda/kernels/sparse_to_dense.cu
recursive-include cudass/cuda/kernels *.h
recursive-include docs *
recursive-include tests *

# Exclude build artifacts and generated files
prune build
prune docs/_build
prune dist
prune .pytest_cache
prune .ruff_cache
prune cudass.egg-info
global-exclude __pycache__
global-exclude *.pyc
global-exclude *.so
global-exclude .DS_Store
global-exclude dependencies.txt
exclude dependencies.txt
exclude cudass/cuda/bindings/cudss_bindings.cpp
