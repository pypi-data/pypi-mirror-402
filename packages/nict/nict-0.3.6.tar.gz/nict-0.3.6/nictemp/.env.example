# This is an example environment configuration file.
# Copy this file to .env and adjust the values according to your environment.
#
# For different environments, use:
# - .env.development for development
# - .env.testing for testing
# - .env.production for production

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/fastapi_adk

# Redis
REDIS_URL=redis://localhost:6379/0
# Set to true to enable Redis Cluster mode
REDIS_CLUSTER_MODE=False

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_PREFIX=fastapi_adk

# AI Models Configuration
# JSON array format with model_name and litellm_params
LITELLM_MODEL_CONFIGS=[{"model_name": "kimi-k2-0905-preview", "litellm_params": {"model": "openai/kimi-k2-0905-preview", "api_key": "sk-rL7jTWljimp052WhhYYO6VKJc1JKYLW29zWanRoMpXkofsPS", "api_base": "https://api.moonshot.cn/v1"}}]
# Default model to use
DEFAULT_LITELLM_MODEL=kimi-k2-0905-preview

# Application
DEBUG=True
HOST=0.0.0.0
PORT=8000
RELOAD=True

# Logging
LOG_LEVEL=INFO
LOG_DIR=logs
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5
LOG_FORMAT=json