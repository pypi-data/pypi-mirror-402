# üêç ViperX Project Configuration
# =============================================================================
# This file serves as the "Source of Truth" for your project infrastructure.
# Use `viperx init -c viperx.yaml` to apply this configuration.
# The tool is idempotent: running it multiple times will only apply new changes.
# =============================================================================

project:
  # [Required] The root project name (kebab-case recommended)
  name: "my-awesome-project"
  
  # [Optional] Project description
  description: "A robust project built with ViperX"
  
  # [Optional] Author details (defaults to git config if omitted)
  author: "Your Name"
  
  # [Optional] License (MIT, Apache-2.0, GPLv3). Default: MIT
  license: "MIT"
  
  # [Optional] Builder backend (default: uv)
  builder: "uv"

settings:
  # [Optional] Generate isolated .env files in src/<pkg>/? Default: true
  use_env: true
  
  # [Optional] Generate config.py embedded loader? Default: true
  use_config: true
  
  # [Optional] Project Type: classic | ml | dl (Default: classic)
  # Applies to the ROOT package if created.
  type: "classic"
  
  # [Optional] DL Framework: pytorch | tensorflow (Only if type is dl)
  framework: "pytorch"

workspace:
