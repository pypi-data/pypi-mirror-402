project:
  # [Required] Root project name
  name: "my-project"
  
  # [Optional] Defaults (Inferred from git/system if omitted)
  # description: "My robust project"
  # author: "Nameless"
  
  # License: Choose based on your needs
  # - MIT: Most permissive. Allows commercial use with no restrictions.
  #        Best for: Libraries, tools you want widely adopted.
  # - Apache-2.0: Permissive with patent protection. Requires attribution.
  #        Best for: Enterprise projects, when patent safety matters.
  # - GPLv3: Copyleft. Derivatives must also be open source.
  #        Best for: Projects you want to stay open forever.
  # license: "MIT"  # Supported: MIT, Apache-2.0, GPLv3
  
  # builder: "uv"   # Supported: uv, hatch

settings:
  # [Optional] Project Defaults (Applied to root & workspace members)
  
  # Generate isolated .env files in src/<pkg>/? (Default: false)
  use_env: false
  
  # Generate config.py embedded loader? (Default: true)
  use_config: true
  
  # Generate tests/ directory? (Default: true)
  use_tests: true
  
  # Project Type: classic | ml | dl (Default: classic, affects ROOT only)
  type: "classic"
  
  # DL Framework: pytorch | tensorflow (Only if type is dl)
  # framework: "pytorch"

workspace:
  # Define workspace members (Monorepo / Utility Packages).
  # These are minimal packages created at the workspace root (Flat Layout).
  packages:
