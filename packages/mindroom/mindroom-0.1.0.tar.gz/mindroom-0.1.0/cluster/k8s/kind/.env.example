# Local Development Environment Variables
# Copy this to .env and fill in your values

# ============================================
# OPTIONAL: For full platform functionality
# ============================================

# Supabase (for authentication and data storage)
# Get these from: https://app.supabase.com/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================
# OPTIONAL: For AI agent functionality
# ============================================

# OpenAI - https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-...

# Anthropic - https://console.anthropic.com/settings/keys
ANTHROPIC_API_KEY=sk-ant-...

# OpenRouter - https://openrouter.ai/keys
OPENROUTER_API_KEY=sk-or-...

# Mem0 - https://app.mem0.ai/dashboard/api-keys
MEM0_API_KEY=...

# ============================================
# OPTIONAL: For Matrix integration
# ============================================

# Matrix account for testing
MATRIX_HOMESERVER_URL=https://matrix.org
MATRIX_ADMIN_USER=@your-user:matrix.org
MATRIX_ADMIN_PASSWORD=your-password

# ============================================
# LOCAL DEVELOPMENT SETTINGS (usually fine as-is)
# ============================================

# Environment
ENVIRONMENT=local
DEBUG=true

# URLs (for local kind cluster)
FRONTEND_URL=http://localhost:3000
BACKEND_URL=http://localhost:8000
