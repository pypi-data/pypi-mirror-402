{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Unit Tests with Coverage",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "-m",
                "pytest",
                "tests/",
                "--cov=arcanus",
                "--cov-report=html",
                "--cov-report=term"
            ],
            "group": {
                "kind": "test",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
        {
            "label": "Run All Benchmarks",
            "type": "shell",
            "command": "${workspaceFolder}/.venv/bin/python",
            "args": [
                "-m",
                "pytest",
                "benchmark/",
                "-v",
                "--benchmark-enable",
                "--benchmark-disable-gc",
                "--benchmark-warmup=on",
                "--benchmark-warmup-iterations=5",
                "--benchmark-min-rounds=5"
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "problemMatcher": []
        },
