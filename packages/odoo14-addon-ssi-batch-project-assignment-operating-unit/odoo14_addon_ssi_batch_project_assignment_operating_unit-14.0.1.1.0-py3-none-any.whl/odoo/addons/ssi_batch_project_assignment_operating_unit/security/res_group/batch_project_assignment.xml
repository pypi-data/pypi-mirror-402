<odoo>
<!-- Data Ownership -->
<record id="batch_project_assignment_ou_group" model="res.groups">
    <field name="name">Operating Unit</field>
    <field
            name="category_id"
            ref="ssi_batch_project_assignment.project_batch_assignment_data_ownership_module_category"
        />
</record>

<record
        id="ssi_batch_project_assignment.project_batch_assignment_company_group"
        model="res.groups"
    >
    <field name="name">Company</field>
    <field
            name="category_id"
            ref="ssi_batch_project_assignment.project_batch_assignment_data_ownership_module_category"
        />
    <field name="implied_ids" eval="[(4, ref('batch_project_assignment_ou_group'))]" />
    <field
            name="users"
            eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"
        />
</record>
</odoo>
