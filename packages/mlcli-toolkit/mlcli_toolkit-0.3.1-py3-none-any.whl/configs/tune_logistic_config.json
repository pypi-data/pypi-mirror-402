{
  "model": {
    "type": "logistic_regression",
    "params": {}
  },
  "dataset": {
    "path": "mlcli/data/sample_data.csv",
    "type": "csv",
    "target_column": "is_canceled"
  },
  "training": {
    "test_size": 0.2,
    "random_state": 42
  },
  "tuning": {
    "param_space": {
      "C": [0.001, 0.01, 0.1, 1.0, 10.0, 100.0],
      "penalty": ["l1", "l2"],
      "solver": ["liblinear", "saga"],
      "max_iter": [500, 1000, 2000]
    }
  },
  "output": {
    "model_dir": "artifacts",
    "save_formats": ["pickle", "joblib"]
  }
}
