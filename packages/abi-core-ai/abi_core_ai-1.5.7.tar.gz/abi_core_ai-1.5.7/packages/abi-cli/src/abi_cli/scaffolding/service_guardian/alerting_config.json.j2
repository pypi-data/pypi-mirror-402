{
  "channels": [
    {
      "name": "console_alerts",
      "channel_type": "webhook",
      "config": {
        "url": "http://localhost:8080 | default('8080') }}/api/alerts/webhook",
        "method": "POST",
        "headers": {
          "Content-Type": "application/json",
          "Authorization": "Bearer console-webhook-token"
        },
        "timeout": 30
      },
      "enabled": true,
      "severity_filter": ["warning", "error", "critical"]
    }
  ],
  "escalation_rules": [
    {
      "name": "critical_immediate_escalation",
      "condition": "severity",
      "threshold": "critical",
      "action": "notify_additional",
      "target_channels": ["console_alerts"],
      "enabled": true
    },
    {
      "name": "error_duration_escalation",
      "condition": "duration",
      "threshold": 600,
      "action": "escalate",
      "target_channels": ["console_alerts"],
      "enabled": true
    },
    {
      "name": "high_violation_count",
      "condition": "count",
      "threshold": 5,
      "action": "escalate",
      "target_channels": ["console_alerts"],
      "enabled": true
    }
  ]
}