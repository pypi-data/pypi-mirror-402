# {{ project_name }} Environment Configuration
# Copy this file to .env and customize values

# Project Information
PROJECT_NAME={{ project_name }}
VERSION={{ version | default('0.1.0') }}
DESCRIPTION="{{ description | default('ABI-powered project') }}"

# ABI Core Settings
ABI_ROLE="{{ abi_role | default('ABI Project') }}"
ABI_NODE="{{ abi_node | default('ABI Node') }}"

# Agent Configuration
AGENT_HOST={{ agent_host | default('0.0.0.0') }}
AGENT_PORT={{ agent_port | default('8000') }}

# Model Configuration
MODEL_NAME={{ model_name | default('qwen2.5:3b') }}
OLLAMA_HOST={{ ollama_host | default('http://localhost:11434') }}

# Security Configuration
ENABLE_GUARDIAL={{ enable_guardial | default('true') }}
OPA_HOST={{ opa_host | default('localhost') }}
OPA_PORT={{ opa_port | default('8181') }}

{% if enable_semantic_layer %}
# Semantic Layer Configuration
SEMANTIC_LAYER_HOST={{ semantic_layer_host | default('localhost') }}
SEMANTIC_LAYER_PORT={{ semantic_layer_port | default('10100') }}
WEAVIATE_URL={{ weaviate_url | default('http://localhost:8080') }}
{% endif %}

# Logging Configuration
LOG_LEVEL={{ log_level | default('INFO') }}
DEBUG={{ debug | default('false') }}

# Development Settings
PYTHONPATH=/app
PYTHONUNBUFFERED=1