{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "(contextfs memory auto-recall --quiet &) 2>/dev/null; exit 0"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "contextfs memory save-session --label 'pre-compact' --quiet"
          }
        ]
      }
    ]
  }
}
