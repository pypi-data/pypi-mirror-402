{
  "hooks": {
    "SessionStart": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python -m contextfs.cli memory auto-recall --quiet"
          }
        ]
      }
    ],
    "Stop": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python -m contextfs.cli memory extract-transcript --save --quiet"
          }
        ]
      }
    ],
    "PreCompact": [
      {
        "matcher": "",
        "hooks": [
          {
            "type": "command",
            "command": "python -m contextfs.cli memory save-session --label 'pre-compact' --quiet"
          }
        ]
      }
    ]
  }
}
