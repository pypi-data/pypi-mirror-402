#!/usr/bin/env bash
#MISE description="Upgrade dependencies"
#USAGE flag "-s --sync" help="Sync dependencies after upgrade"

set -euo pipefail

sync="${usage_sync:-false}"

echo "â¬†ï¸  Upgrading dependencies..."

# Upgrade all dependencies
uv lock --upgrade

echo "âœ… Dependencies upgraded successfully!"
echo ""

if [ "$sync" = "true" ]; then
    echo "ğŸ”„ Syncing dependencies..."
    uv sync --all-extras --all-groups
    echo "âœ… Dependencies synced!"
    echo ""
fi

echo "ğŸ“Š Summary:"
echo "  âœ“ uv.lock updated with latest versions"
if [ "$sync" = "true" ]; then
    echo "  âœ“ Virtual environment synced"
fi
echo ""
echo "ğŸ’¡ Next steps:"
if [ "$sync" = "false" ]; then
    echo "   - Sync dependencies: mise run upgrade --sync"
    echo "   - Or manually: uv sync --all-extras --all-groups"
fi
echo "   - Test changes: mise run ci"
echo "   - Commit: git add uv.lock && git commit -m 'chore: upgrade dependencies'"
