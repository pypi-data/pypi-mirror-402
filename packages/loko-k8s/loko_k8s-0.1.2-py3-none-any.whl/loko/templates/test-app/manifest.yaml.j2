apiVersion: v1
kind: Namespace
metadata:
  name: loko-test
---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: test-app
  namespace: loko-test
spec:
  replicas: 1
  selector:
    matchLabels:
      app: loko-test
  template:
    metadata:
      labels:
        app: loko-test
    spec:
      containers:
      - name: nginx
        image: {{ registry_host }}/loko-test:{{ image_tag }}
        ports:
        - containerPort: 80
          name: http
        env:
        - name: IMAGE_TAG
          value: "{{ image_tag }}"
---
apiVersion: v1
kind: Service
metadata:
  name: test-app
  namespace: loko-test
spec:
  selector:
    app: loko-test
  ports:
  - port: 80
    targetPort: 80
    name: http
  type: ClusterIP
---
apiVersion: networking.k8s.io/v1
kind: Ingress
metadata:
  name: test-app
  namespace: loko-test
  annotations:
    traefik.ingress.kubernetes.io/router.entrypoints: websecure
    traefik.ingress.kubernetes.io/router.tls: "true"
spec:
  ingressClassName: traefik
  tls:
  - hosts:
    - {{ test_host }}
    secretName: wildcard-cert
  rules:
  - host: {{ test_host }}
    http:
      paths:
      - path: /
        pathType: Prefix
        backend:
          service:
            name: test-app
            port:
              number: 80
