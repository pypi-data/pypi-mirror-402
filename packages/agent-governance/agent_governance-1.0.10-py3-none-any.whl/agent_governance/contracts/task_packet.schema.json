{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "TaskPacket",
  "type": "object",
  "required": [
    "id",
    "title",
    "role",
    "goal",
    "repo_context",
    "constraints",
    "deliverables",
    "stop_conditions"
  ],
  "properties": {
    "id": {
      "type": "string",
      "description": "Unique task identifier"
    },
    "title": {
      "type": "string"
    },
    "role": {
      "type": "string",
      "description": "Agent role to execute this task"
    },
    "goal": {
      "type": "string",
      "description": "Single-sentence objective"
    },
    "repo_context": {
      "type": "object",
      "required": ["branch", "commit"],
      "properties": {
        "branch": { "type": "string" },
        "commit": { "type": "string" },
        "paths": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "inputs": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Files, logs, or commands already available"
    },
    "constraints": {
      "type": "object",
      "required": ["allowed_write_paths"],
      "properties": {
        "allowed_write_paths": {
          "type": "array",
          "items": { "type": "string" }
        },
        "forbidden_actions": {
          "type": "array",
          "items": { "type": "string" }
        }
      }
    },
    "deliverables": {
      "type": "array",
      "items": {
        "enum": ["diff", "tests", "logs", "commands", "report"]
      }
    },
    "stop_conditions": {
      "type": "array",
      "items": { "type": "string" }
    }
  },
  "additionalProperties": false
}