# YouTube Grabber Configuration

# Video quality: 720 or 1080
VIDEO_QUALITY=1080

# Random delay between downloads (in seconds)
MIN_DELAY=1
MAX_DELAY=5

# Add index to video filenames (01, 02, etc.)
# true or false
INDEX_VIDEOS=true

# Number of retry attempts per video (in addition to initial attempt)
# 0 = no retries, 1 = one retry, etc.
RETRY_ATTEMPTS=1

# Delay before retry attempt (in seconds)
# Default: 300 (5 minutes)
RETRY_DELAY=300

# Telegram notifications
# Enable notifications when downloads complete or fail
TELEGRAM_NOTIFICATIONS_ENABLED=false

# Telegram bot token from @BotFather
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Telegram chat ID to send messages to
# Get it from @userinfobot or @getmyid_bot
TELEGRAM_CHAT_ID=your_chat_id_here
