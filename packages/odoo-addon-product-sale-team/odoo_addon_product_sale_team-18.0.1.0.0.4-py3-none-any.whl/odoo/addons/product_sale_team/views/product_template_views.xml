<odoo>
    <record id="product_template_sale_team_form_view" model="ir.ui.view">
        <field name="name">product.template.sale.team.form.view</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view" />
        <field name="arch" type="xml">
            <xpath
                expr="//page[@name='general_information']//field[@name='categ_id']"
                position="after"
            >
                <field name="sales_team_id" />
            </xpath>
        </field>
    </record>
</odoo>
