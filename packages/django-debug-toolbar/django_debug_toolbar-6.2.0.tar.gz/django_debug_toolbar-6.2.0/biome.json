{
    "$schema": "https://biomejs.dev/schemas/2.3.7/schema.json",
    "formatter": {
        "enabled": true,
        "useEditorconfig": true
    },
    "assist": {
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    },
    "linter": {
        "enabled": true,
        "rules": {
            "recommended": true,
            "complexity": {
                "noImportantStyles": "off"
            },
            "correctness": {
                "noUndeclaredVariables": "error"
            },
            "suspicious": {
                "noDocumentCookie": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "trailingCommas": "es5"
        }
    }
}
