{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "Node",
    "lib": ["ES2022", "DOM"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "outDir": "./dist",
    "rootDir": "."
  },
  "include": ["types.ts", "renderer.ts", "components.ts", "index.ts"],
  "exclude": ["node_modules", "dist", "examples", "render-cli.ts", "render-standalone.ts"]
}
